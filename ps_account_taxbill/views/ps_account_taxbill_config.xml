<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.ps.account.taxbill</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="52"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Taxbill" string="Taxbill" data-key="ps_account_taxbill">
                        <h2>Tax Bill Settings</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="module_ps_account_taxbill_wanhong" widget="upgrade_boolean"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="module_ps_account_taxbill_wanhong"/>
                                    <div class="text-muted">
                                        <!--调用万鸿云票接口开具税控纸质/电子发票-->
                                        Call tax bill wanhong interface to issue tax control paper / electronic invoice
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>