<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ps_account_taxbill_tree" model="ir.ui.view">
        <field name="name">view_ps_account_taxbill_tree</field>
        <field name="model">ps.account.taxbill</field>
        <field name="arch" type="xml">
            <tree string="Account Tax Bill">
                <field name="name"/>
                <field name="invoice_ids" widget="many2many_tags"/>
                <field name="date"/>
                <field name="invoice_date"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="taxbill_type"/>
                <field name="taxbill_number"/>
                <field name="state"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

    <record id="view_ps_account_taxbill_form" model="ir.ui.view">
        <field name="name">view_ps_account_taxbill_form</field>
        <field name="model">ps.account.taxbill</field>
        <field name="arch" type="xml">
            <form string="Account Tax Bill">
                <header>
                    <button name="button_confirm" type="object" states="draft" string="Confirm"
                        class="oe_highlight"/>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object"
                            name="action_view_receipts"
                            class="oe_stat_button"
                            icon="fa-ticket"
                            attrs="{'invisible': [('invoice_count', '=', 0)]}" groups="base.group_user">
                            <field name="invoice_count" widget="statinfo" string="Receipts"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Account Tax Bill" class="oe_edit_only"/>
                        <h1>
                            <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="user_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="taxbill_type" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="reviewer_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="payee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="drawer_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="is_discard_zero" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="invoice_ids" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state', '!=', 'draft')]}" required="1" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="invoice_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="mobile" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="email" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="taxbill_number" readonly="1"/>
                            <field name="company_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="taxbill_amount_available"/>
                            <field name="taxbill_amount_actual" readonly="1"/>
                            <field name="notes" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tax Bill Detail">
                            <field name="apply_line_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree editable="bottom" create="0">
                                    <field name="product_id" readonly="1" force_save="1"/>
                                    <field name="invoice_id"/>
                                    <field name="invoice_line_id" invisible="1"/>
                                    <field name="discount" invisible="1"/>
                                    <field name="name" invisible="1"/>
                                    <field name="trade_name"/>
                                    <field name="specification"/>
                                    <field name="uom_id" readonly="1" force_save="1"/>
                                    <field name="quantity" required="1"/>
                                    <field name="invoices_available_quantity" invisible="1" readonly="1" force_save="1"/>
                                    <field name="price_unit" readonly="1" force_save="1"/>
                                    <field name="price_total"/>
                                    <field name="invoice_line_tax_ids" widget="many2many_tags"/>
                                    <field name="price_subtotal"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ps_account_taxbill_window" model="ir.actions.act_window">
        <field name="name">Account Tax Bill</field>
        <field name="res_model">ps.account.taxbill</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_ps_account_taxbill_tree"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
                Please create a account tax bill.
          </p>
        </field>
    </record>

    <menuitem id="taxbill_appication_menu" name="Taxbill Appication" parent="ps_account_taxbill.menu_manage" action="action_ps_account_taxbill_window" sequence="1"/>
</odoo>
