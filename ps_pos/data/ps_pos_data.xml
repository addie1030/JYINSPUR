<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record forcecreate="True" id="ps_pos_point" model="decimal.precision">
            <field name="name">ps_pos_point</field>
            <field name="digits" eval="1"/>
        </record>
        <record forcecreate="True" id="ps_pos_multiple" model="decimal.precision">
            <field name="name">ps_pos_multiple</field>
            <field name="digits" eval="2"/>
        </record>
        <!--定时任务：随日期更新会员状态, 仅限处于'草稿'与'生效'状态的会员;Schedule action-->
        <record id="_automatically_update_member_state_cron" model="ir.cron">
            <field name="name">Member State Scheduler</field>
            <field eval="False" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="state">code</field>
            <field name="code">model._automatically_update_member_state()</field>
        </record>
        <!--会员类别编号自动生成-->
        <record id="sequence_ps_member_category_id" model="ir.sequence">
            <field name="name">Member Category Code Sequence</field>
            <field name="code">ps.member.category</field>
            <field name="prefix">MC</field>
            <field name="padding">4</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>