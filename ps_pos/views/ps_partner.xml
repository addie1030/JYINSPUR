<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--POS Membership information Maintenance form view-->
        <record id="view_ps_pos_member_info_maintain_form" model="ir.ui.view">
            <field name="name">membership.information.maintenance.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='accounting_disabled']" position="after">
                    <page string="Membership" name="ps_membership_info" groups="point_of_sale.group_pos_manager">
                        <group string="Member Information" name="ps_member_info_label_1">
                            <group style="width:50%;position:relative;overflow:hidden">
                                <field name="ps_is_use_point" invisible="1"/>
                                <field name="ps_is_use_deposit" invisible="1"/>
                                <field name="ps_is_use_password" invisible="1"/>
                                <field name="ps_member_no" attrs="{'readonly': [('ps_member_state', 'in', ['effective','expiry','loss','logoff'])]}"/>
                                <field name="ps_start_date"/>
                                <field name="ps_end_date"/>
                            </group>
                            <group style="width:50%;position:relative;overflow:hidden">
                                <field name="ps_member_state" readonly="1"/>
                                <field name="ps_member_category_id"/>
                                <field name="ps_member_password"
                                       password="True"
                                       attrs="{'invisible': [('ps_is_use_password', '=', False)]} "/>
                            </group>
                        </group>
                        <group string="Points" name="ps_member_info_label_2" attrs="{'invisible': [('ps_is_use_point', '=', False)]}">
                            <group>
                                <field name="ps_member_initial_point" attrs="{'readonly': [('ps_member_state', '!=', 'new')]}"/>
                                <field name="ps_member_balance_point" readonly="1"/>
                            </group>
                            <group>
                                <field name="ps_sum_bonus_point" readonly="1"/>
                            </group>
                        </group>
                        <group string="Deposit" name="ps_member_info_label_3" attrs="{'invisible': [('ps_is_use_deposit', '=', False)]}">
                            <group>
                                <field name="ps_member_initial_deposit" attrs="{'readonly': [('ps_member_state', '!=', 'new')]}"/>
                                <field name="ps_member_balance_deposit" readonly="1"/>
                            </group>
                            <group>
                                <field name="ps_sum_deposit_amount" readonly="1"/>
                            </group>
                        </group>
                        <group string="Bonus" name="ps_member_info_label_4" attrs="{'invisible': [('ps_is_use_deposit', '=', False)]}">
                            <group>
                                <field name="ps_member_initial_bonus" attrs="{'readonly': [('ps_member_state', '!=', 'new')]}"/>
                                <field name="ps_member_balance_bonus" readonly="1"/>
                            </group>
                            <group>
                                <field name="ps_sum_bonus_amount" readonly="1"/>
                            </group>
                        </group>
                        <group string="Consumption" name="ps_member_info_label_5">
                            <group>
                                <field name="ps_member_initial_consumption" attrs="{'readonly': [('ps_member_state', '!=', 'new')]}"/>
                                <field name="ps_last_consumption_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="ps_consume_amount" readonly="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <!--POS Membership information Maintenance tree view, add column 'member state' into tree view-->
        <record id="view_ps_pos_member_info_maintain_tree" model="ir.ui.view">
            <field name="name">membership.information.maintenance.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="ps_member_state"/>
                </tree>
            </field>
        </record>
        <!--POS Membership information definition of action-->
        <record id="action_window_ps_pos_membership_information_entry" model="ir.actions.act_window">
            <field name="name">Membership Information Entry</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{'search_default_customer':1}"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Please create a member record.
              </p>
            </field>
        </record>
        <!--add the menu item into the menu  -->
        <menuitem id="menu_item_pos_member_info_entry"
                  name="Membership Information"
                  parent="ps_pos.ps_pos_member_menu"
                  action="action_window_ps_pos_membership_information_entry"
                  sequence="4"
                  groups="point_of_sale.group_pos_manager"/>
        <!--add 'activate' action to the action list-->
        <record id="action_ps_member_state_activate" model="ir.actions.server" >
            <field name="name">Activate</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">
                action=env['res.partner']._ps_activate_member(env.context.get('active_ids'))
            </field>
            <field name="binding_model_id" ref="model_res_partner" />
        </record>
        <!--add 'deactivate' action to the action list-->
        <record id="action_ps_member_state_deactivate" model="ir.actions.server" >
            <field name="name">Deactivate</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">
                action=env['res.partner']._ps_deactivate_member(env.context.get('active_ids'))
            </field>
            <field name="binding_model_id" ref="model_res_partner" />
        </record>
        <!--add 'Report Loss' action to the action list-->
        <record id="action_ps_member_state_report_loss" model="ir.actions.server" >
            <field name="name">Report The Loss</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">
                action=env['res.partner']._ps_report_loss_member(env.context.get('active_ids'))
            </field>
            <field name="binding_model_id" ref="model_res_partner" />
        </record>
        <!--翻译修改-->
        <delete model="ir.translation" search="[('src','=','Global'),('name','=','product.pricelist.item,applied_on'),('value','=','全球')]"/>
    </data>
</odoo>