<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_asset_alteration_tree" model="ir.ui.view">
        <field name="name">ps.asset.alteration.tree</field>
        <field name="model">ps.asset.alteration</field>
        <field name="arch" type="xml">
            <tree string="Asset Alteration">
                <field name="name"/>
                <field name="date"/>
                <field name="change_id"/>
                <field name="cause"/>
                <field name="change_date"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_account_asset_alteration_form" model="ir.ui.view">
        <field name="name">ps.asset.alteration.form</field>
        <field name="model">ps.asset.alteration</field>
        <field name="arch" type="xml">
            <form string="Asset Alteration">
                <header>
                    <button name="validate" state="draft" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}"/>
                    <button name="create_move" string="Create Move" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('state', '!=', 'confirmed'), ('is_value', '=', False)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Asset Alteration" class="oe_edit_only"/>
                        <h1>
                            <field name="name" attrs="{'readonly': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}"/>
                        </h1>
                    </div>
                    <group string="Asset Alteration">
                        <group>
                            <field name="change_date" required="True" attrs="{'readonly': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}"/>
                            <field name="user_id" attrs="{'readonly': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}"/>
                            <field name="cause" required="True" attrs="{'readonly': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}"/>
                        </group>
                        <group>
                            <field name="date" required="True" attrs="{'readonly': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}"/>
                            <field name="change_id" required="True" attrs="{'readonly': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}"/>
                        </group>
                    </group>
                    <group col="1">
                        <group string="Alteration Content" col="4">
                            <group>
                                <field name="is_category" attrs="{'readonly': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}" widget="checkbox"/>
                                <field name="is_location" attrs="{'readonly': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}" widget="checkbox"/>
                            </group>
                            <group>
                                <field name="is_asset_state" attrs="{'readonly': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}" widget="checkbox"/>
                                <field name="is_quantity" attrs="{'readonly': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}" widget="checkbox"/>
                            </group>
                            <group>
                                <field name="is_value" attrs="{'readonly': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}" widget="checkbox"/>
                                <field name="is_method_number" attrs="{'readonly': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}" widget="checkbox"/>
                            </group>
                            <group>
                                <field name="is_init_total" attrs="{'readonly': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}" widget="checkbox"/>
                                <!--<field name="is_salvage_value" attrs="{'readonly': ['|', ('state', '=', 'confirmed'), ('state', '=', 'posted')]}" widget="checkbox"/>-->
                            </group>
                        </group>
                        <notebook>
                            <page string="Alteration Details">
                                <field name="line_ids" attrs="{'readonly': [('state', '=', 'posted')]}">
                                    <tree editable="bottom">
                                        <field name="asset_code"/>
                                        <field name="asset_id" domain="[('state', 'ilike','open')]"/>
                                        <field name="cause" required="True" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                                        <field name="former_category_id" readonly="1" attrs="{'invisible': [('is_category', '=', False)]}"/>
                                        <field name="latter_category_id" attrs="{'invisible': [('is_category', '=', False)]}"/>
                                        <field name="former_location_id" readonly="1" attrs="{'invisible': [('is_location', '=', False)]}"/>
                                        <field name="latter_location_id" attrs="{'invisible': [('is_location', '=', False)]}"/>
                                        <field name="former_asset_state_id" readonly="1" attrs="{'invisible': [('is_asset_state', '=', False)]}"/>
                                        <field name="latter_asset_state_id" attrs="{'invisible': [('is_asset_state', '=', False)]}"/>
                                        <field name="former_quantity" readonly="1" force_save="1" attrs="{'invisible': [('is_quantity', '=', False)]}"/>
                                        <field name="latter_quantity" attrs="{'invisible': [('is_quantity', '=', False)]}"/>
                                        <field name="former_value" readonly="1" force_save="1" attrs="{'invisible': [('is_value', '=', False)]}"/>
                                        <field name="latter_value" attrs="{'invisible': [('is_value', '=', False)]}"/>
                                        <field name="former_depreciation" readonly="1" force_save="1" attrs="{'invisible': [('is_init_total', '=', False)]}"/>
                                        <field name="latter_depreciation" attrs="{'invisible': [('is_init_total', '=', False)]}"/>
                                        <!--<field name="former_salvage_value" readonly="1" attrs="{'invisible': [('is_salvage_value', '=', False)]}"/>-->
                                        <!--<field name="latter_salvage_value" attrs="{'invisible': [('is_salvage_value', '=', False)]}"/>-->
                                        <field name="former_method_number" readonly="1" attrs="{'invisible': [('is_method_number', '=', False)]}"/>
                                        <field name="latter_method_number" attrs="{'invisible': [('is_method_number', '=', False)]}"/>
                                        <field name="state" invisible="1"/>
                                        <field name="is_category" invisible="1"/>
                                        <field name="is_asset_state" invisible="1"/>
                                        <field name="is_location" invisible="1"/>
                                        <field name="is_quantity" invisible="1"/>
                                        <field name="is_value" invisible="1"/>
                                        <field name="is_init_total" invisible="1"/>
                                        <field name="is_salvage_value" invisible="1"/>
                                        <field name="is_method_number" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_account_asset_alteration" model="ir.actions.act_window">
        <field name="name">Asset Alteration</field>
        <field name="res_model">ps.asset.alteration</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_account_asset_alteration_tree"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
                Please create a Asset alteration record.
          </p>
        </field>
    </record>

    <menuitem id="menu_account_asset_alteration"
              name="Asset Alteration"
              parent="menu_account_asset_adviser"
              sequence="103"
              action="action_account_asset_alteration"/>


</odoo>