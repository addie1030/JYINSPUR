<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_asset_change_mode_tree" model="ir.ui.view">
        <field name="name">ps.asset.change.mode.tree</field>
        <field name="model">ps.asset.change.mode</field>
        <field name="arch" type="xml">
            <tree string="Asset Change Mode">
                <field name="name"/>
                <field name="category"/>
                <field name="is_default" widget="checkbox"/>
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_account_asset_change_mode_form" model="ir.ui.view">
        <field name="name">ps.asset.change.mode.form</field>
        <field name="model">ps.asset.change.mode</field>
        <field name="arch" type="xml">
            <form string="Asset Change Mode">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" required="True"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            <field name="category"/>
                            <field name="is_default"/>
                        </group>
                        <group string="Journal Entries">
                            <field name="journal_id"/>
                            <field name="account_change_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_account_asset_change_mode" model="ir.actions.act_window">
        <field name="name">Asset Change Method</field>
        <field name="res_model">ps.asset.change.mode</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_account_asset_change_mode_tree"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
                Please create a asset change mode record.
          </p>
        </field>
    </record>

    <menuitem id="menu_account_asset_change_mode"
              name="Asset Change Method"
              parent="menu_account_asset_configuration"
              action="action_account_asset_change_mode"/>


</odoo>