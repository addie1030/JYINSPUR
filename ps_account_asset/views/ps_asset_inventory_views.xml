<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_asset_inventory_tree" model="ir.ui.view">
        <field name="name">ps.asset.inventory.tree</field>
        <field name="model">ps.asset.inventory</field>
        <field name="arch" type="xml">
            <tree string="Asset Inventory">
                <field name="date"/>
                <field name="inventory_date"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="notes"/>
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_account_asset_inventory_form" model="ir.ui.view">
        <field name="name">ps.asset.inventory.form</field>
        <field name="model">ps.asset.inventory</field>
        <field name="arch" type="xml">
            <form string="Asset Inventory">
                <header>
                    <button name="validate" state="draft" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': [('state', '=', 'confirmed')]}"/>
                    <button name="set_to_draft" string="Set to Draft" type="object" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <button name="refresh_data"  string="Refresh Asset" type="object"
                                  class="oe_highlight"
                                  groups="account.group_account_manager"
                                  attrs="{'readonly': [('state', '=', 'confirmed')]}"
                        />
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="date" required="True" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                            <field name="inventory_date" required="True" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                            <field name="notes" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                        </group>
                        <group>
                            <field name="name" required="True" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                            <field name="user_id" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                        </group>
                        <field name="line_ids">
                            <tree editable="bottom" create="false" delete="false" string="Inventory lines">
                                <field name="asset_code" readonly="1"/>
                                <field name="asset_id" readonly="1"/>
                                <field name="barcode" readonly="1"/>
                                <field name="category_id" readonly="1"/>
                                <field name="count_qty" readonly="1"/>
                                <field name="inventory_qty" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                                <field name="difference_qty" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                                <field name="location_id" readonly="1"/>
                                <field name="real_location_id" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                                <field name="notes" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                                <field name="state" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_account_asset_inventory" model="ir.actions.act_window">
        <field name="name">Asset Inventory</field>
        <field name="res_model">ps.asset.inventory</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_account_asset_inventory_tree"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
                Please create a asset inventory record.
          </p>
        </field>
    </record>

    <menuitem id="menu_account_asset_inventory"
              name="Asset Inventory"
              parent="menu_account_asset_adviser"
              sequence="102"
              action="action_account_asset_inventory"/>


</odoo>