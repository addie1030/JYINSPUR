<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="ps_assets_use_form_view" model="ir.ui.view">
        <field name="name">ps.account.assets.use.form</field>
        <field name="model">account.assets.use</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="ps_assets_isstorage"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="ps_assets_use_tree_view" model="ir.ui.view">
        <field name="name">ps.account.assets.use.tree</field>
        <field name="model">account.assets.use</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name" widget="checkbox"/>
                <field name="ps_assets_isstorage" widget="checkbox"/>
            </tree>
        </field>
    </record>

    <record id="ps_assets_status_form_view" model="ir.ui.view">
        <field name="name">ps.account.assets.status.form</field>
        <field name="model">account.assets.status</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="ps_assets_depreciate"/>
                            <field name="ps_assets_isstorage"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="ps_assets_status_tree_view" model="ir.ui.view">
        <field name="name">ps.account.assets.status.tree</field>
        <field name="model">account.assets.status</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ps_assets_depreciate" widget="checkbox"/>
                <field name="code"/>
                <field name="name"/>
                <field name="ps_assets_isstorage" widget="checkbox"/>
            </tree>
        </field>
    </record>

    <record id="ps_assets_reducefor_form_view" model="ir.ui.view">
        <field name="name">ps.account.assets.reducefor.form</field>
        <field name="model">account.assets.reducefor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="ps_assets_reducefor_tree_view" model="ir.ui.view">
        <field name="name">ps.account.assets.reducefor.tree</field>
        <field name="model">account.assets.reducefor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="ps_assets_accessory_form_view" model="ir.ui.view">
        <field name="name">ps.account.assets.accessory.form</field>
        <field name="model">account.assets.accessory.prmytb</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="assets_id"/>
                        </group>
                        <group>
                            <field name="name" invisible="1"/>
                            <!--<field name="name" />-->
                        </group>
                    </group>
                    <notebook>
                        <page string="附属产品明细">
                            <field name="accessory_m_ids" widget="one2many_list">
                                <tree editable="bottom" string="附属产品列表">
                                    <field name="code" string="部件编号" required="1"/>
                                    <field name="name" string="部件名称" required="1"/>
                                    <field name="accessory_spec" string="规格型号" required="1"/>
                                    <field name="accessory_uom" string="计量单位" required="1" />
                                    <field name="accessory_num" string="部件数量" required="1"/>
                                    <field name="accessory_price" string="部件价值" required="1"/>
                                    <field name="accessory_manufacturer" string="生产厂家" required="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="ps_assets_accessory_tree_view" model="ir.ui.view">
        <field name="name">ps.account.assets.accessory.tree</field>
        <field name="model">account.assets.accessory.prmytb</field>
        <field name="arch" type="xml">
            <tree>
                <field name="assets_id"/>
                <field name="accessory_m_ids"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_account_assets_use">
        <field name="name">资产用途</field>
        <field name="res_model">account.assets.use</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="action_account_assets_status">
        <field name="name">资产状态</field>
        <field name="res_model">account.assets.status</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="action_account_assets_reducefor">
        <field name="name">减少原因</field>
        <field name="res_model">account.assets.reducefor</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record model="ir.actions.act_window" id="action_account_assets_accessory">
        <field name="name">主要附属设备</field>
        <field name="res_model">account.assets.accessory.prmytb</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                点击创建一个新的记录.
            </p>
        </field>
    </record>

    <menuitem id="menu_account_asset_use"
              name="资产用途"
              parent="ps_account_asset.menu_account_asset_initial"
              action="action_account_assets_use"
              sequence="7"
              groups="account.group_account_manager"/>
    <menuitem id="menu_account_asset_status"
              name="资产状态"
              parent="ps_account_asset.menu_account_asset_initial"
              action="action_account_assets_status"
              sequence="6"
              groups="account.group_account_manager"/>
    <menuitem id="menu_account_asset_reducefor"
              name="减少原因"
              parent="ps_account_asset.menu_account_asset_initial"
              action="action_account_assets_reducefor"
              sequence="9"
              groups="account.group_account_manager"/>
    <menuitem id="menu_account_asset_accessory"
              name="主要附属设备"
              parent="ps_account_asset.menu_account_asset_initial"
              action="action_account_assets_accessory"
              sequence="11"
              groups="account.group_account_manager"/>
</odoo>