<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_asset_state_tree" model="ir.ui.view">
        <field name="name">ps.asset.state.tree</field>
        <field name="model">ps.asset.state</field>
        <field name="arch" type="xml">
            <tree string="Asset States">
                <field name="name"/>
                <field name="describe"/>
                <field name="is_depreciation" widget="checkbox"/>
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_account_asset_state_form" model="ir.ui.view">
        <field name="name">ps.asset.state.form</field>
        <field name="model">ps.asset.state</field>
        <field name="arch" type="xml">
            <form string="Asset States">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <field name="name" required="True"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        <field name="describe"/>
                        <field name="is_depreciation"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_account_asset_state" model="ir.actions.act_window">
        <field name="name">Asset State</field>
        <field name="res_model">ps.asset.state</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_account_asset_state_tree"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
                Please create a asset state record.
          </p>
        </field>
    </record>

    <menuitem id="menu_account_asset_state"
              name="Asset State"
              parent="menu_account_asset_configuration"
              action="action_account_asset_state"/>


</odoo>