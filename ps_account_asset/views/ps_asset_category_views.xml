<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_account_asset_category_form_inherit">
        <field name="name">account.asset.category.form</field>
        <field name="model">account.asset.category</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_category_form"/>
        <field name="arch" type="xml">
            <!--<xpath expr="//field[@name='prorata']" position="after">-->
            <xpath expr="//group/group/field[@name='group_entries']" position="after">
            <!--<xpath expr="//group/group[last()]" position="after">-->
                <field name="ps_asset_uom_id"/>
                <field name="ps_asset_state_id"/>
                <field name="ps_net_salvage_rate"/>
            </xpath>
            <xpath expr="//field[@name='method_number']" position="attributes">
                <attribute name="string">Number of Depreciation</attribute>
            </xpath>
            <xpath expr="//label[@for='method_period']" position="attributes">
                <attribute name="string">One Depreciation Every</attribute>
            </xpath>
            <xpath expr="//field[@name='account_depreciation_expense_id']" position="after">
                <field name="ps_account_asset_disposal_id" required="1"/>
            </xpath>
        </field>
    </record>
</odoo>
