<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ps_asset_disposal_tree" model="ir.ui.view">
        <field name="name">ps.asset.disposal.tree</field>
        <field name="model">ps.asset.disposal</field>
        <field name="arch" type="xml">
            <tree string="Asset Disposal">
                <field name="date" required="True"/>
                <field name="disposal_date" required="True"/>
                <field name="name" required="True"/>
                <field name="change_id" required="True"/>
                <field name="change_expense_id" required="True"/>
                <field name="cause"/>
                <field name="user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_ps_asset_disposal_form" model="ir.ui.view">
        <field name="name">ps.asset.disposal.form</field>
        <field name="model">ps.asset.disposal</field>
        <field name="arch" type="xml">
            <form string="Asset Disposal">
                <header>
                    <button name="validate" states="draft" string="Confirm" type="object" class="oe_highlight"/>
                    <field name="account_move_is_created" invisible="1"/>
                    <button name="generate_account_moves" string="Generate Account Moves" type="object" class="oe_highlight"
                            attrs="{'invisible': ['|',('state','!=','checked'),('account_move_is_created','=',True)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,checked,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Asset Disposal" class="oe_edit_only"/>
                        <h1>
                            <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" required="True" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="user_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="disposal_date" required="True" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="change_id" domain="[('category', 'ilike','reduce')]" required="True" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="change_expense_id" domain="[('category', 'ilike','reduce')]" required="True" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="cause" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Disposal Detail">
                            <field name="disposal_line_ids" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <tree editable="bottom">
                                    <field name="code"/>
                                    <field name="asset_id" domain="[('state', 'ilike','open'),('ps_is_disposal','!=',True)]"/>
                                    <field name="abstract"/>
                                    <field name="asset_uom_id" invisible="1"/>
                                    <field name="asset_qty" invisible="1"/>
                                    <field name="value"/>
                                    <field name="depreciation_all"/>
                                    <field name="depreciation_month" attrs="{'readonly': ['|',('depreciation_is_done', '=', True),('depreciation_state_is_depreciation', '=', False)]}"/>
                                    <field name="value_residual"/>
                                    <field name="income"/>
                                    <field name="expense"/>
                                    <field name="is_voucher" invisible="1"/>
                                    <field name="depreciation_is_done" invisible="1"/>
                                    <field name="depreciation_state_is_depreciation" invisible="1"/>
                                    <field name="disposal_move_id" readonly="1"/>
                                    <field name="income_move_id" readonly="1"/>
                                    <field name="expense_move_id" readonly="1"/>
                                    <field name="depreciation_move_id" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ps_asset_disposal" model="ir.actions.act_window">
        <field name="name">Asset Disposal</field>
        <field name="res_model">ps.asset.disposal</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_ps_asset_disposal_tree"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
                Please create a asset disposal record.
          </p>
        </field>
    </record>

    <menuitem id="menu_ps_asset_disposal"
              name="Asset Disposal"
              parent="menu_account_asset_adviser"
              sequence="102"
              action="action_ps_asset_disposal"/>
</odoo>