<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="ps_mrp_expenses_plan_pull_wizard" model="ir.ui.view">
            <field name="name">ps.mrp.expenses.plan.pull.wizard</field>
            <field name="model">ps.mrp.expenses.pull.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="period_id" required="1"/>
                            </group>
                        </group>
                        <field name="expenses_plan_ids" widget="one2many_list">
                            <tree delete="false" create="false" editable="true">
                                <field name="is_pull" widget="boolean"/>
                                <field name="code" readonly="1"/>
                                <field name="name" readonly="1"/>
                            </tree>
                        </field>
                        <footer>
                            <button name="pull" type="object"
                                    string="Pull Expenses Plan" class="oe_highlight"/>
                            <button class="btn btn-secondary oe_button oe_form_button" special="cancel"
                                    string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>