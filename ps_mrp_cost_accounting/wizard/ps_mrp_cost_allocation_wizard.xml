<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ps_mrp_cost_allocation_wizard" model="ir.ui.view">
            <field name="name">ps mrp cost allocation wizard</field>
            <field name="model">ps.mrp.cost.allocation.wizard</field>
            <field name="arch" type="xml">
                <form string="Cost Allocation">
                    <sheet>
                        <group>
                            <group>
                                <field name="period_id" required="1"/>
                            </group>
                        </group>
                        <footer>
                            <button name="complete" type="object"
                                    string="Cost Allocation" class="oe_highlight"/>
                            <button class="btn btn-secondary oe_button oe_form_button" special="cancel"
                                    string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>