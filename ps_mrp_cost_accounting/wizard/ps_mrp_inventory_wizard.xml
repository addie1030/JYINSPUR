<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_ps_mrp_inventory_wizard_form" model="ir.ui.view">
            <field name="name">Product Inventory Input</field>
            <field name="model">ps.mrp.inventory.wizard</field>
            <field name="arch" type="xml">
                <form string="Product Inventory Input" >
                    <header>
                        <button name="confirm"
                                string="Confirm"
                                type="object"
                                states="draft"
                                class="oe_highlight"
                                groups="account.group_account_manager"
                        />
                        <field name="state" invisible="1"/>
                        <field name="name" invisible="1"/>
                    </header>
                    <sheet>
                        <button name="refresh_data"  string="Refresh" type="object"
                                class="oe_highlight"
                                states="draft"
                                groups="account.group_account_manager"
                        />
                        <group>
                            <group>
                                <field name="period_id"/>
                            </group>
                        </group>
                            <field name="lines_ids" widget="one2many_list">
                                <tree delete="false" create="false" editable="true"
                                      decoration-danger="product_inventory_qty > 0">
                                    <field name="product_name" readonly="1"/>
                                    <field name="product_id" invisible="1"/>
                                    <field name="mrp_cost_accounting_name" readonly="1"/>
                                    <field name="mrp_cost_accounting_id" invisible="1"/>
                                    <field name="name" readonly="1"/>
                                    <field name="product_qty"  readonly="1"/>
                                    <field name="product_inventory_qty"/>
                                    <field name="picking_type_name" readonly="1"/>
                                    <field name="picking_type_id" invisible="1"/>
                                    <field name="state" readonly="1"/>
                                </tree>
                            </field>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_ps_mrp_inventory_input_wizard" model="ir.actions.act_window">
            <field name="name">Product Inventory Input</field>
            <field name="res_model">ps.mrp.inventory.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
            </field>
        </record>
        <menuitem id="menu_ps_mrp_inventory_input"
                  name="Product Inventory Input"
                  action="action_ps_mrp_inventory_input_wizard"
                  parent="menu_in_the_product_inventory"
                  groups="base.group_user"
                  sequence="1" />

        <record id="view_ps_mrp_expense_distribution_wizard_form" model="ir.ui.view">
            <field name="name">Expense Distribution Period</field>
            <field name="model">ps.mrp.expense.distribution.wizard</field>
            <field name="arch" type="xml">
                <form string="Expense Distribution " >
                    <sheet>
                        <group>
                            <group>
                                <field name="period_id"
                                       required="1"
                                       widget="selection"
                                />
                            </group>
                        </group>
                        <footer>
                            <button string="Confirm" name="confirm" type="object" default_focus="1" class="btn-primary"/>
                            <button string="Cancel" class="btn-default" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>