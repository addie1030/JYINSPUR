<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ps_mrp_in_product_cost_calculation_wizard" model="ir.ui.view">
            <field name="name">ps mrp in product cost calculation wizard</field>
            <field name="model">ps.mrp.in.product.cost.calculation.wizard</field>
            <field name="arch" type="xml">
                <form string="In Product Cost Calculation">
                    <sheet>
                        <group>
                            <group>
                                <field name="period_id" required="1"/>
                            </group>
                        </group>
                        <footer>
                            <button name="calculate" type="object"
                                    string="In Product Cost Calculate" class="oe_highlight"/>
                            <button class="btn btn-secondary oe_button oe_form_button" special="cancel"
                                    string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>