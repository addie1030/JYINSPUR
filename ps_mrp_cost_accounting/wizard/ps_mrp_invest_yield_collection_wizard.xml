<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ps_mrp_invest_yield_collection_wizard" model="ir.ui.view">
            <field name="name">ps mrp invest yield collection wizard</field>
            <field name="model">ps.mrp.invest.yield.collection.wizard</field>
            <field name="arch" type="xml">
                <form string="Invest Yield Collection">
                    <sheet>
                        <group>
                            <group>
                                <field name="period_id" required="1"/>
                            </group>
                        </group>
                        <footer>
                            <button name="collect" type="object"
                                    string="Invest Yield Collect" class="oe_highlight"/>
                            <button class="btn btn-secondary oe_button oe_form_button" special="cancel"
                                    string="Cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>