<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="ps_mrp_expenses_plan_pull_tree" model="ir.ui.view">
            <field name="name">ps.mrp.expenses.plan.pull.tree</field>
            <field name="model">ps.mrp.expenses.plan.pull</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="ps_mrp_expenses_plan_pull_form" model="ir.ui.view">
            <field name="name">ps.mrp.expenses.plan.pull.form</field>
            <field name="model">ps.mrp.expenses.plan.pull</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                        <field name="plan_ids">
                            <tree editable="bottom">
                                <field name="expenses_id" required="True"/>
                                <field name="expenses_src" required="True"/>
                                <field name="account_id" required="True"/>
                                <field name="account_direction" required="True"/>
                                <field name="cost_account_id" required="True"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="act_ps_mrp_expenses_plan_pull" model="ir.actions.act_window">
            <field name="name">Expenses Plan Pull</field>
            <field name="res_model">ps.mrp.expenses.plan.pull</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Expenses Plan Pull
                </p>
            </field>
        </record>

        <!--费用引入tree视图-->
        <record id="ps_mrp_expenses_pull_tree" model="ir.ui.view">
            <field name="name">ps.mrp.expenses.pull.tree</field>
            <field name="model">ps.mrp.expenses.pull</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="expenses_id"/>
                    <field name="date"/>
                    <field name="cost_account_id"/>
                    <field name="amount"/>
                    <field name="expenses_src"/>
                    <field name="period_id"/>
                </tree>
            </field>
        </record>

        <record id="act_ps_mrp_expenses_pull" model="ir.actions.act_window">
            <field name="name">Expenses Pull</field>
            <field name="res_model">ps.mrp.expenses.pull</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Expenses Pull
                </p>
            </field>
        </record>

        <!--费用引入菜单-->
        <menuitem id="menu_ps_mrp_expenses_pull" name="Expenses Pull"
                  action="act_ps_mrp_expenses_pull" parent="menu_expenses_collection" groups="base.group_user"
                  sequence="1"/>

        <!--费用引入方案菜单-->
        <menuitem id="menu_ps_mrp_expenses_plan_pull" name="Expenses Plan Pull"
                  action="act_ps_mrp_expenses_plan_pull" parent="menu_assignment_criteria" groups="base.group_user"
                  sequence="3"/>
    </data>
</odoo>