<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="ps_mrp_inventory_list" model="ir.ui.view">
            <field name="name">ps.mrp.inventory.list</field>
            <field name="model">ps.mrp.inventory</field>
            <field name="arch" type="xml">
                <tree create="false" >
                    <field name="period_id"/>
                    <field name="product_id"/>
                    <field name="mrp_cost_accounting_id"/>
                    <field name="name"/>
                    <field name="product_qty"/>
                    <field name="product_inventory_qty"/>
                    <field name="picking_type_name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="action_ps_mrp_inventory_list" model="ir.actions.act_window">
            <field name="name">Product Inventory List</field>
            <field name="res_model">ps.mrp.inventory</field>
            <field name="view_id" ref="ps_mrp_inventory_list"/>
            <field name="view_mode">tree</field>
        </record>
        <menuitem id="menu_ps_mrp_inventory_list"
                  name="Product Inventory List"
                  action="action_ps_mrp_inventory_list"
                  parent="menu_in_the_product_inventory"
                  groups="base.group_user"
                  sequence="2" />

        <record id="ps_mrp_expense_distribution_list" model="ir.ui.view">
            <field name="name">ps.mrp.expense.distribution.list</field>
            <field name="model">ps.mrp.expense.distribution</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="period"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="mrp_cost_accounting_id"/>
                    <field name="cost_item_id"/>
                    <field name="expense_item_id"/>
                    <field name="product_id"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>
        <record id="action_ps_mrp_expense_distribution_list" model="ir.actions.act_window">
            <field name="name">Expense Distribution List</field>
            <field name="res_model">ps.mrp.expense.distribution</field>
            <field name="view_id" ref="ps_mrp_expense_distribution_list"/>
            <field name="view_mode">tree</field>
        </record>
        <!--<menuitem id="menu_ps_mrp_expense_distribution_list"-->
                  <!--name="Expense Distribution List"-->
                  <!--action="action_ps_mrp_expense_distribution_list"-->
                  <!--parent="menu_expense_allocation"-->
                  <!--groups="base.group_user"-->
                  <!--sequence="2" />-->

    </data>
</odoo>