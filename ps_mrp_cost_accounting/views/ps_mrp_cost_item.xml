<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="ps_mrp_cost_item_list" model="ir.ui.view">
            <field name="name">ps.mrp.cost.item.list</field>
            <field name="model">ps.mrp.cost.item</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <!--<field name="code" required="True"/>-->
                    <field name="name" required="True"/>
                    <field name="cost_type" required="True"/>
                    <field name="product_ids" widget="many2many_tags"
                           attrs="{'readonly': [('cost_type', 'in', ('indirect'))]}" />
                    <field name="company_id" required="True" attrs="{'readonly': [('company_id','!=', False)]}"/>
                </tree>
            </field>
        </record>
        <record id="ps_mrp_cost_item" model="ir.actions.act_window">
            <field name="name">Mrp Cost Item</field>
            <field name="res_model">ps.mrp.cost.item</field>
            <field name="view_mode">tree</field>
        </record>
        <menuitem id="menu_ps_mrp_cost_item" name="Mrp Cost item" action="ps_mrp_cost_item" parent="menu_cost_basic_data" groups="base.group_user" sequence="2" />
    </data>
</odoo>