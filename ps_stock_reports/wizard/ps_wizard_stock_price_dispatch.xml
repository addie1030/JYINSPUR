<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="ps_wizard_stock_price_dispatch_form" model="ir.ui.view">
        <field name="name">ps.wizard.stock.price.dispatch.form</field>
        <field name="model">ps.wizard.stock.price.dispatch</field>
        <field name="arch" type="xml">
            <form string="Stock Price Dispatch">
                <sheet>
                    <group>
                        <field name="warehouse_id" options="{'no_create_edit':True,'no_create':True}"/>
                        <field name="lot_stock_id" invisible="1"/>
                        <field name="location_id" options="{'no_create_edit':True,'no_create':True}"
                               domain="['|', ('id', '=', lot_stock_id), ('location_id', '=', lot_stock_id)]"/>
                        <field name="start_date" widget="date"/>
                        <field name="end_date" widget="date"/>
                    </group>
                    <footer>
                        <button string="Confirm" name="do_inventory_dispatch" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_ps_wizard_stock_price_dispatch" model="ir.actions.act_window">
        <field name="name">Action Wizard Price Dispatch</field>
        <field name="res_model">ps.wizard.stock.price.dispatch</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


</odoo>