<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="mrp.button">
        <button type="button" class="btn btn-primary o_mrp_bom_print">print</button>
        <button type="button" class="btn btn-primary ml8 o_mrp_bom_print_unfolded">print unfolded</button>
    </t>

    <form class="form-inline" t-name="report_materials_forward_query_search">
        <div t-attf-class="form-group #{is_bom_version_applied ? 'col-lg-4' : 'col-lg-6'}">
            <label>Product:</label>
            <select class="o_input o_mrp_bom_report_product">
                <option t-foreach="variants" t-as="variant" t-att-value="variant">
                    <t t-esc="variants[variant]"/>
                </option>
            </select>
        </div>
        <div t-if="is_bom_version_applied" class="form-group col-lg-4">
            <label>BOM Version:</label>
            <select class="o_input o_mrp_bom_report_bom_version">
                <option t-foreach="bom_versions" t-as="version" t-att-value="version">
                    <t t-esc="bom_versions[version]"/>
                </option>
            </select>
        </div>
        <div t-attf-class="form-group #{is_bom_version_applied ? 'col-lg-4' : 'col-lg-6'}">
            <label>Layer:</label>
            <select class="o_input o_mrp_bom_report_layer">
                <option t-att-data-type="'mlayer'">Multi layer</option>
                <option t-att-data-type="'slayer'">Single layer</option>
            </select>
        </div>
    </form>
</templates>
