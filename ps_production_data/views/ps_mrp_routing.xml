<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mrp_routing_view_form" model="ir.ui.view">
            <field name="name">mrp_routing_view_form</field>
            <field name="model">mrp.routing</field>
            <field name="inherit_id" ref="mrp.mrp_routing_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='operation_ids']" position="inside">
                    <tree editable="bottom">
                        <field name="ps_process_sequence" widget="handle"/>
                        <field name="name" />
                        <field name="workcenter_id" />
                        <field name="ps_salary_type" />
                        <field name="ps_price_unit" />
                        <field name="time_cycle" />
                    </tree>

                </xpath>
            </field>
        </record>
    </data>
</odoo>