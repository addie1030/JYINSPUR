<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mrp_workcenter_view_form" model="ir.ui.view">
            <field name="name">mrp_workcenter_view_form</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='costs_hour']" position="before">
                    <field name="ps_salary_type" />
                </xpath>
                <xpath expr="//field[@name='costs_hour']" position="after">
                    <field name="ps_is_key" />
                    <field name="ps_is_outsource" />
                    <field name="ps_outsourcing_unit" attrs="{'invisible': [('ps_is_outsource', '=', False)]}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>