<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.ps.production.data</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="60"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Production data" string="Production data" data-key="ps_production_data">
                        <!--损耗率使用方法-->
                        <h2>Loss rate usage</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="mt16">
                                <field name="ps_loss_rate_usage" class="o_light_label" widget="radio"/>
                            </div>
                        </div>
                        <!--废品率使用方法-->
                        <h2>Scrap rate usage</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="mt16">
                                <field name="ps_scrap_rate_usage" class="o_light_label" widget="radio"/>
                            </div>
                        </div>
                        <!--审批-->
                        <h2>Approval State</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="ps_bom_needs_approval"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="ps_bom_needs_approval"/>
                                    <div class="text-muted">
                                        <!--BOM需要审批-->
                                        BOM needs approval
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>