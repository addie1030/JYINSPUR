<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mrp_bom" model="ir.ui.view">
            <field name="name">view_mrp_bom</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="ps_bom_needs_approval" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='bom_line_ids']/tree//field[@name='product_id']" position="after">
                    <field name="ps_attrition_rate" />
                    <field name="ps_is_quantitative" />
                </xpath>
                <xpath expr="//form[1]/sheet[1]" position="before">
                    <header id="ps_approval_header">
                        <button id="ps_approval_button" attrs="{'invisible': [('ps_bom_needs_approval','=', False)]}" name="approval" class="oe_highlight" string="Approval" type="object"/>
                        <field name="ps_approval_status" widget="statusbar"/>
                    </header>
                </xpath>
            </field>
        </record>

        <record id="view_ps_mrp_bom_form" model="ir.ui.view">
            <field name="name">view_mrp_bom</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="ps_production_data.ps_mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="ps_bom_needs_approval" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='bom_line_ids']/tree//field[@name='product_id']" position="after">
                    <field name="ps_attrition_rate" />
                    <field name="ps_is_quantitative" />
                </xpath>
                <xpath expr="//form[1]/sheet[1]" position="before">
                    <header id="ps_approval_header">
                        <button id="ps_approval_button" attrs="{'invisible': [('ps_bom_needs_approval','=', False)]}" name="approval" class="oe_highlight" string="Approval" type="object"/>
                        <field name="ps_approval_status" widget="statusbar"/>
                    </header>
                </xpath>
            </field>
        </record>
    </data>
</odoo>