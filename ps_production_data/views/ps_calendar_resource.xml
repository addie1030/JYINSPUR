<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--modify the page of resource.calendar: add noteboook, field and button-->
    <record id="view_ps_resource_calendar_form_inherit" model="ir.ui.view">
        <field name="name">ps.resource.calendar.form.inherit</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="resource.resource_calendar_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="before">
                <header>
                    <button name="generate_calendar"
                            type="object" string="Generate Calendar"
                            groups="ps_production_data.group_production_data_manager"
                            icon="fa-calendar" class="oe_highlight" />
                </header>
            </xpath>
            <xpath expr="//page[2]" position="after">
                <page string="Calendar Lines" name="ps_calendar_info">
                    <field name="calendar_line_ids" readonly="1">
                        <tree string="Calendar Lines">
                            <field name="working_day"/>
                            <field name="gregorian_date"/>
                            <field name="date_attribute"/>
                            <field name="gregorian_week"/>
                            <field name="day_hours"/>
                            <field name="total_hours" readonly="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//field[@name='tz']" position="after">
                <field name="ps_is_factory_calendar"/>
            </xpath>
        </field>
    </record>
    <!--add menuitem-->
    <menuitem id="menu_ps_resource_calendar"
        name ="Working Times"
        parent="ps_production_data.menu_configuration"
        action="resource.action_resource_calendar_form"
        sequence="2"/>
</odoo>
