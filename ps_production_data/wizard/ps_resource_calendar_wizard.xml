<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="wizard_view_ps_resource_calendar" model="ir.ui.view">
            <field name="name">ps.resource.calendar.wizard</field>
            <field name="model">ps.resource.calendar.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate calendar">
                    <group>
                        <label for="is_generate_calendar"/>
                        <div name="generate_calendar_div" class="o_row">
                            <field name="is_generate_calendar" widget="checkbox"/>
                        </div>
                        <group>
                            <field name="start_date" widget="date" attrs="{'required': [('is_generate_calendar','=', True)]}"/>
                        </group>
                        <group>
                            <field name="end_date" widget="date" attrs="{'required': [('is_generate_calendar','=', True)]}"/>
                        </group>
                        <label for="is_extend_calendar"/>
                        <div name="extend_calendar_div" class="o_row">
                            <field name="is_extend_calendar" widget="checkbox"/>
                        </div>
                        <group>
                            <field name="extend_date" widget="date" attrs="{'required': [('is_extend_calendar','=', True)]}"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Confirm" name="ps_resource_calendar_confirm" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>