            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='packaging']" position="after">
                    <group string="Inventory Quality Check"
                           groups="stock.group_production_lot"
                           attrs="{'invisible':[('tracking','=','none')]}">
                        <label for="ps_inventory_inspection_time"/>
                        <div>
                            <field name="ps_inventory_inspection_time" class="oe_inline"/>
                            <span>days</span>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
