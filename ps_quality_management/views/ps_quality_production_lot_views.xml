<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <record id="view_ps_quality_inventory_inspection_date" model="ir.ui.view">
        <field name="name">ps.quality.stock.production.lot.inherit.form</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_group']" position="after">
                <group string="Inventory Quality Check">
                    <group>
                        <field name="ps_inventory_inspection_date"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
