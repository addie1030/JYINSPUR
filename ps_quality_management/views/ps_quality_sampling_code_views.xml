<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="action_quality_sampling_code_report" model="ir.actions.client">
            <field name="name">Quality Sampling Code Report</field>
            <field name="tag">quality_sampling_code_report</field>
        </record>

        <record id="quality_sampling_name_tree_view" model="ir.ui.view">
            <field name="name">quality_sampling_name_tree_view</field>
            <field name="model">ps.quality.sampling.name</field>
            <field name="arch" type="xml">
                <tree string="Quality Sampling name">
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <!-- Inherit Form View to Modify it -->
        <record id="quality_sampling_name_form_view" model="ir.ui.view">
            <field name="name">quality_sampling_name_form_view</field>
            <field name="model">ps.quality.sampling.name</field>
            <field name="arch" type="xml">
                <form string="Quality Sampling name">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(action_quality_sampling_code_report)d" type="action"
                                    string="Sampling Code Table"  class="oe_stat_button" icon="fa-table" />
                        </div>
                        <group>
                            <field name="name" required="True" attrs="{'readonly': [('is_set', '!=', False)]}"/>
                            <field name="is_set" invisible="1"/>
                        </group>

                        <div>
                            <field name="code_ids" attrs="{'readonly': [('is_set', '!=', False)]}">
                                <tree editable="bottom">
                                    <field name="code"/>
                                    <field name="size_scope"/>
                                    <field name="size_begin" required="1"/>
                                    <field name="size_end" required="1"/>
                                    <field name="inspection_level"/>
                                    <field name="inspection_level_name" required="1"/>
                                    <field name="inspection_level_category"/>
                                </tree>

                            </field>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="quality_sampling_name_search_view" model="ir.ui.view">
            <field name="name">quality_sampling_name_search_view</field>
            <field name="model">ps.quality.sampling.name</field>
            <field name="arch" type="xml">
                <search string="Quality Check Order">
                    <field name="name"/>
                </search>
            </field>
        </record>


        <record id="quality_sampling_code_action" model="ir.actions.act_window">
            <field name="name">Quality Sampling Name</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ps.quality.sampling.name</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>

