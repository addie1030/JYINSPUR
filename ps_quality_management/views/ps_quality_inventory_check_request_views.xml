<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quality_inventory_check_request_view" model="ir.ui.view">
        <!--quality inventory check request view-->
        <field name="name">quality.inventory.check.request.tree</field>
        <field name="model">ps.quality.inventory.check.request</field>
        <field name="arch" type="xml">
            <tree string="Quality Inventory Check Request">
                <field name="name"/>
                <field name="date"/>
                <field name="user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="quality_inventory_check_request_form" model="ir.ui.view">
        <!--quality inventory check request form-->
        <field name="name">quality.inventory.check.request.form</field>
        <field name="model">ps.quality.inventory.check.request</field>
        <field name="arch" type="xml">
            <form string="Quality Inventory Check Request" edit="false">
                <header>
                    <button name="action_confirm" states="draft" type="object" string="Confirm" class="btn-primary"/>
                    <button name="action_done" states="confirmed" type="object" string="Audit" class="btn-primary"/>
                    <button name="action_cancel" states="draft,confirmed" type="object" string="Cancel"/>
                    <button name="action_draft" states="cancelled" type="object" string="Action Draft"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,done,cancelled"/>
                </header>

                <sheet>
                    <div class="oe_title"><h1><field name="name" readonly="1"/></h1></div>
                    <group>
                        <group>
                            <field name="date" readonly="True"/>
                            <field name="user_id" readonly="True"/>
                        </group>
                        <group>
                        </group>
                    </group>

                    <field name="lot_ids" string="Line">
                        <tree string="Line">
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                            <field name="warehouse_id"/>
                            <field name="location_id"/>
                            <field name="lot_id"/>
                        </tree>
                        <form string="Line">
                            <sheet>
                                <group>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                    </group>
                                    <group>
                                        <field name="warehouse_id"/>
                                        <field name="location_id"/>
                                        <field name="lot_id"/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_quality_inventory_check_request" model="ir.actions.act_window">
        <!--action to quality inventory check request view-->
        <field name="name">Quality Inventory Check Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ps.quality.inventory.check.request</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="quality_inventory_check_request_view"/>
    </record>
</odoo>