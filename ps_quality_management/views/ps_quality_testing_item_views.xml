<odoo>
    <data>
        <!-- Quality Testing Item : view,action  -->

        <record id="action_quality_testing_item_tree" model="ir.actions.act_window">
            <field name="name">Quality Testing Item</field>
            <field name="res_model">ps.quality.testing.item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a quality testing item
                </p>
            </field>
        </record>

        <record id="view_quality_testing_item_tree" model="ir.ui.view">
            <field name="name">ps.quality.testing.item.tree</field>
            <field name="model">ps.quality.testing.item</field>
            <field name="arch" type="xml">
                <tree string="Quality Testing Item" editable="bottom">
                    <field name="code" readonly="1"/>
                    <field name="name" required="1"/>
                    <field name="method_type" required="1"/>
                    <field name="defect_level" invisible="1"/>
                    <field name="is_destructive_test" widget="checkbox" invisible="1"/>
                    <field name="is_key_inspection" widget="checkbox" invisible="1"/>
                    <field name="criteria_id" options="{'no_create_edit':True,'no_create':True}"/>
                    <field name="basis_id" options="{'no_create_edit':True,'no_create':True}"/>
                    <field name="testing_method_id" options="{'no_create_edit':True,'no_create':True}"/>
                    <field name="testing_equipment_id" options="{'no_create_edit':True,'no_create':True}"/>
                    <field name="type" required="1"/>
                    <field name="aql" attrs="{'required': [('type','=','gb')], 'readonly': [('type','=','all')]}"/>
                    <field name="strictness" attrs="{'required': [('type','=','gb')], 'readonly': [('type','=','all')]}"/>
                    <field name="check_level" attrs="{'required': [('type','=','gb')], 'readonly': [('type','=','all')]}"/>
                    <field name="sampling_plan_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Quality Testing Value Possible : view,action  -->

        <record id="action_quality_testing_value_possible_tree" model="ir.actions.act_window">
            <field name="name">Quality Testing Value Possible</field>
            <field name="res_model">ps.quality.testing.value.possible</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a quality testing value possible
                </p>
            </field>
        </record>

        <record id="view_quality_testing_value_possible_tree" model="ir.ui.view">
            <field name="name">ps.quality.testing.value.possible.tree</field>
            <field name="model">ps.quality.testing.value.possible</field>
            <field name="arch" type="xml">
                <tree string="Quality Testing Value Possible" editable="bottom">
                    <field name="value" required="1"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Quality Testing Value Mapping : view,action  -->

        <record id="action_quality_testing_value_mapping_tree" model="ir.actions.act_window">
            <field name="name">Quality Testing Value Mapping</field>
            <field name="res_model">ps.quality.testing.value.mapping</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a quality testing value mapping
                </p>
            </field>
        </record>

        <record id="view_quality_testing_value_mapping_tree" model="ir.ui.view">
            <field name="name">ps.quality.testing.value.mapping.tree</field>
            <field name="model">ps.quality.testing.value.mapping</field>
            <field name="arch" type="xml">
                <tree string="Quality Testing Value Possible" editable="bottom">
                    <field name="item_id" required="1" options="{'no_create_edit':True,'no_create':True}"/>
                    <field name="value_id" required="1" options="{'no_create_edit':True,'no_create':True}"/>
                    <field name="is_target"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>