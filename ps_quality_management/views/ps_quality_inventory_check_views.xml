<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quality_inventory_check_view" model="ir.ui.view">
        <!--quality inventory check request view-->
        <field name="name">quality.inventory.check.tree</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <tree string="Quality Inventory Check">
                <field name="ps_is_request" invisible="True"/>
                <field name="ps_is_date_company" invisible="True"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="product_uom_id"/>
                <field name="ps_inventory_inspection_date"/>
                <field name="ps_warehouse_id"/>
                <field name="location_id"/>
            </tree>
        </field>
    </record>

    <record id="quality_inventory_check_filter" model="ir.ui.view">
        <!--search view-->
        <field name="name">quality.inventory.check.select</field>
        <field name="model">stock.quant</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_id"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.server" id="action_quality_inventory_check_server">
        <!--action to quality inventory check request view-->
        <field name="name">Quality Inventory Check</field>
        <field name="model_id" ref="stock.model_stock_quant"/>
        <field name="state">code</field>
        <field name="code">
            action=model.action_quality_check_filter()
        </field>
    </record>

    <record id="action_quality_inventory_check" model="ir.actions.act_window">
        <!--action to quality inventory check request view-->
        <field name="name">Quality Inventory Check</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.quant</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="quality_inventory_check_view"/>
        <field name="search_view_id" ref="quality_inventory_check_filter"/>
    </record>

    <record id="quality_inventory_check_request_action" model="ir.actions.server">
        <!-- Action to quality_inventory_check_request for multi -->
        <field name="name">Inventory Check Request</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="model_id" ref="stock.model_stock_quant"/>
        <field name="binding_model_id" ref="stock.model_stock_quant"/>
        <field name="code">records.move_to_inventory_check_request()</field>
    </record>

    <record id="view_stock_quant_form_inherit" model="ir.ui.view">
        <field name="name">view_stock_quant_form_inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_form"/>
        <field name="arch" type="xml">
            <sheet position="before">
                <header>
                    <button name='move_to_inventory_check_request' type='object' string='check request' class="oe_highlight"/>
                </header>
            </sheet>
        </field>
    </record>
</odoo>