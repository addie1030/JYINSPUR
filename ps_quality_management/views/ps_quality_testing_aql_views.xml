<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quality_testing_aql_view" model="ir.ui.view">
        <!--quality testing aql view-->
        <field name="name">quality.testing.aql.tree</field>
        <field name="model">ps.quality.testing.aql</field>
        <field name="arch" type="xml">
            <tree string="Quality Testing AQL" edit="0">
                <field name="key"/>
                <field name="value"/>
            </tree>
        </field>
    </record>

    <record id="quality_testing_aql_from" model="ir.ui.view">
        <field name="name">quality.testing.aql.form</field>
        <field name="model">ps.quality.testing.aql</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="key" />
                        </group>
                        <group>
                            <field name="value"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_quality_testing_aql" model="ir.actions.act_window">
        <!--action to quality testing aql view-->
        <field name="name">Quality Testing AQL</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ps.quality.testing.aql</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="quality_testing_aql_view"/>
    </record>
</odoo>