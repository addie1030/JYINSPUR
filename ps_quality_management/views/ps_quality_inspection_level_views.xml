<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quality_inspection_level_view" model="ir.ui.view">
        <!--quality inspection level view-->
        <field name="name">quality.inspection.level.tree</field>
        <field name="model">ps.quality.inspection.level</field>
        <field name="arch" type="xml">
            <tree string="Quality Inspection Level" edit="0">
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
            </tree>
        </field>
    </record>

    <record id="quality_inspection_level_view_form" model="ir.ui.view">
        <field name="name">quality.inspection.level.form</field>
        <field name="model">ps.quality.inspection.level</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="category" />
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_quality_inspection_level" model="ir.actions.act_window">
        <!--action to quality inspection level view-->
        <field name="name">Quality Inspection Level</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ps.quality.inspection.level</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="quality_inspection_level_view"/>
    </record>
</odoo>