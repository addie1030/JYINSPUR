<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="quality_control_point_view_tree_inherit" model="ir.ui.view">
            <field name="name">quality_point_view_tree</field>
            <field name="model">quality.point</field>
            <field name="inherit_id" ref="quality_control.quality_point_view_tree"/>
            <field name="arch" type="xml">
                <tree position="attributes">
                    <attribute name="create">false</attribute>
                </tree>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="inherit_quality_control_points_form" model="ir.ui.view">
            <field name="name">quality_control_points_form</field>
            <field name="model">quality.point</field>
            <field name="inherit_id" ref="quality.quality_point_view_form"/>
            <field name="arch" type="xml">
                <form position="attributes">
                    <attribute name="create">false</attribute>
                    <attribute name="edit">false</attribute>
                </form>

                <xpath expr="//field[@name='company_id']" position="after">
                    <!-- Add new fields -->
                    <field name="plan_id" options="{'no_create_edit':True,'no_create':True}"/>
                    <field name="sampling_plan_id" options="{'no_create_edit':True,'no_create':True}"/>
                </xpath>

                <field name="product_tmpl_id" position="attributes">
                    <attribute name="options">
                        {'no_create_edit':True,'no_create':True}
                    </attribute>
                </field>

                <field name="picking_type_id" position="attributes">
                    <attribute name="options">
                        {'no_create_edit':True,'no_create':True}
                    </attribute>
                </field>

                <field name="user_id" position="attributes">
                    <attribute name="options">
                        {'no_create_edit':True,'no_create':True}
                    </attribute>
                </field>

                <field name="measure_frequency_type" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

                <field name="test_type_id" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>

                <xpath expr="//notebook" position="before">
                    <group string="Check  Data">
                        <group>
                            <field name="sequence" invisible="1"/>
                            <field name="testing_item_id"
                                   options="{'no_create_edit':True,'no_create':True}"/>
                            <field name="method_type"/>
                            <field name="defect_level" invisible="1"/>
                            <field name="is_destructive_test" invisible="1"/>
                            <field name="is_key_inspection" invisible="1"/>
                            <field name="type" required="1"/>
                            <field name="aql"
                                   attrs="{'required': [('type','=','gb')], 'invisible': [('type','=','all')]}"/>
                            <field name="strictness"
                                   attrs="{'required': [('type','=','gb')], 'invisible': [('type','=','all')]}"/>

                        </group>
                        <group>
                            <field name="check_level"
                                   attrs="{
                                                           'invisible': [('type', 'not in', ['gb'])],
                                                           'required': [('type', 'in', ['gb'])],
                                                           'no_create_edit':True,'no_create':True}"
                            />
                            <field name="criteria_id"
                                   options="{'no_create_edit':True,'no_create':True}"/>
                            <field name="testing_equipment_id"
                                   options="{'no_create_edit':True,'no_create':True}"/>
                            <field name="basis_id"
                                   options="{'no_create_edit':True,'no_create':True}"/>
                            <field name="testing_method_id"
                                   options="{'no_create_edit':True,'no_create':True}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="state" required="1" invisible="1"/>
                            <field name="comparison" attrs="{'invisible': [('method_type','!=','quantitative')]}"/>
                            <field name="target_value_qualitative" widget="many2many_tags"
                                   attrs="{'invisible':[('method_type','in',['quantitative',])]}"/>
                            <field name="lower_deviation"
                                   attrs="{'invisible':[('method_type','not in',['quantitative',])]}"/>
                            <field name="upper_deviation"
                                   attrs="{'invisible':[('method_type','not in',['quantitative',])]}"/>
                        </group>
                        <group>
                            <field name="target_value_quantitative"
                                   attrs="{'invisible':[('method_type','not in',['quantitative',])]}"/>
                            <field name="lower_limit" readonly="1"
                                   attrs="{'invisible':[('method_type','not in',['quantitative',])]}"/>
                            <field name="upper_limit" readonly="1"
                                   attrs="{'invisible':[('method_type','not in',['quantitative',])]}"/>
                            <field name="own_lower_limit" invisible="1"/>
                            <field name="own_upper_limit" invisible="1"/>
                        </group>

                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>




