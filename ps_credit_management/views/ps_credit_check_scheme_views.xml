<odoo>
    <data>
        <!--  view_credit_scheme  -->
        <record id="view_credit_scheme_filter" model="ir.ui.view">
            <field name="name">ps.credit.check.scheme.list</field>
            <field name="model">ps.credit.check.scheme</field>
            <field name="arch" type="xml">
                <search string="Search credit check scheme ">
                    <!--<field name="code"/>-->
                    <field name="name"/>
                    <filter name="is_default" string="is_default" domain="[('is_default','=','True')]"/>
                    <filter name="Draft" string="Draft" domain="[('state','=','draft')]"/>
                    <filter name="Confirmed" string="Confirmed" domain="[('state','=','confirmed')]"/>
                    <filter name="Approved" string="Approved" domain="[('state','=','approved')]"/>
                    <filter name="Closed" string="Closed" domain="[('state','=','closed')]"/>
                    <filter name="Cancelled" string="Cancelled" domain="[('state','=','cancelled')]"/>
                    <group expand="0" string="Group By...">
                        <filter string="is_default" domain="[]"
                                name="group_by_is_default"
                                context="{'group_by': 'is_default'}"/>
                        <filter string="state" domain="[]"
                                name="group_by_state"
                                context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_credit_scheme_tree" model="ir.actions.act_window">
            <field name="name">Credit Scheme</field>
            <field name="res_model">ps.credit.check.scheme</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a credit scheme
                </p>
                <p>
                    Create credit scheme, add and manage credit rules.
                </p>
            </field>
        </record>

        <record id="view_credit_scheme_tree" model="ir.ui.view">
            <field name="name">ps.credit.check.scheme.tree</field>
            <field name="model">ps.credit.check.scheme</field>
            <field name="arch" type="xml">
                <tree string="Credit Scheme" default_order="name desc,validate_date desc">
                    <field name="name"/>
                    <!--<field name="code" readonly="1"/>-->
                    <field name="is_default" widget="checkbox"/>
                    <field name="state"/>
                    <field name="validate_by"/>
                    <field name="validate_date"/>
                </tree>
            </field>
        </record>

        <record id="view_credit_scheme_form" model="ir.ui.view">
            <field name="name">ps.credit.check.scheme.form</field>
            <field name="model">ps.credit.check.scheme</field>
            <field name="arch" type="xml">
                <form string="Credit Schemee Detial">
                    <header>
                        <button name="confirmed" string="Confirm" type="object" class="btn-primary"
                                attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                        <button name="cancelled" string="Cancel" type="object"
                                attrs="{'invisible': [('state', 'not in', ['confirmed','approved'])]}"/>
                        <button name="draft" string="Set Draft" type="object" class="btn-primary"
                                attrs="{'invisible': [('state', 'not in', ['cancelled'])]}"/>
                        <button name="approved" string="Approve" type="object" class="btn-primary"
                                groups="ps_credit_management.group_credit_officer"
                                attrs="{'invisible': [('state', 'not in', ['confirmed'])]}"/>
                        <button name="closed" string="Close" type="object" class="btn-primary"
                                attrs="{'invisible': [('state', 'not in', ['approved'])]}"/>

                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,confirmed,approved,closed,cancelled"/>
                    </header>
                    <sheet>
                        <group>
                            <h1>
                                <!--<field name="code" readonly="1"/>-->
                            </h1>
                        </group>
                        <group>
                            <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="description" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="is_default" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="validate_by" readonly="1"/>
                            <field name="validate_date" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Check Rules" name="check_rules">
                                <field name="check_rule_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="document" options="{'no_create_edit':True,'no_create':True}"/>
                                        <field name="control_strength" readonly="1"/>
                                        <field name="check_credit_limit" widget="checkbox"/>
                                        <field name="check_credit_ratio" widget="checkbox"/>
                                        <field name="check_overdue_days" widget="checkbox"/>
                                        <field name="check_overdue_amount" widget="checkbox"/>
                                        <field name="check_overdue_ratio" widget="checkbox"/>
                                        <field name="excessive_condition"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="view_credit_check_rule_form" model="ir.ui.view">
            <field name="name">ps.credit.check.rule.form</field>
            <field name="model">ps.credit.check.rule</field>
            <field name="arch" type="xml">
                <form string="Credit Schemee Detial">
                    <sheet>
                        <group>
                            <group>
                                <field name="document" options="{'no_create_edit':True,'no_create':True}"/>
                                <field name="control_strength" readonly="1"/>
                                <field name="excessive_condition"/>
                            </group>
                            <group>
                                <field name="check_credit_limit" />
                                <field name="check_credit_ratio" />
                                <field name="check_overdue_days" />
                                <field name="check_overdue_amount" />
                                <field name="check_overdue_ratio" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    </data>
</odoo>