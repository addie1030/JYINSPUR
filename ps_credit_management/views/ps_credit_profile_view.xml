<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="credit_profile_tree" model="ir.ui.view">
        <!--credit profile tree-->
        <field name="name">ps.credit.profile.tree</field>
        <field name="model">ps.credit.profile</field>
        <field name="arch" type="xml">
            <tree string="Credit Profile">
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="partner_id"/>
                <field name="currency_id" groups="base.group_multi_currency"/>
                <field name="state"/>
                <field name="level_id"/>
                <field name="check_scheme_id"/>
                <field name="credit_limit"/>
                <field name="ratio" widget="percentage"/>
                <field name="order_limit"/>
                <field name="overdue_days"/>
                <field name="overdue_limit"/>
                <field name="overdue_ratio" widget="percentage"/>
                <field name="date_start"/>
                <field name="cycle_days"/>
                <field name="date_end"/>
            </tree>
        </field>
    </record>

    <record id="credit_profile_form" model="ir.ui.view">
        <!--credit profile form-->
        <field name="name">ps.credit.profile.form</field>
        <field name="model">ps.credit.profile</field>
        <field name="arch" type="xml">
            <form string="Credit Profile">
                <header>
                    <button name="action_approve" states="draft" type="object" string="Audit" class="btn-primary"/>
                    <button name="action_close" states="confirmed" type="object" string="Close" class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,closed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="company_id" required="True" options="{'no_create_edit': 'True','no_create':'True'}"
                                   attrs="{'readonly':[('state','!=','draft')]}" groups="base.group_multi_company"/>
                            <field name="partner_id" required="True" options="{'no_create_edit': 'True','no_create':'True'}"
                                   attrs="{'readonly':[('state','!=','draft')]}"  domain="[('customer','=',True), ('parent_id', '=', False)]"/>
                            <field name="currency_id" required="True" options="{'no_create_edit': 'True','no_create':'True'}"
                                   attrs="{'readonly':[('state','!=','draft')]}" groups="base.group_multi_currency"/>
                            <field name="level_id" required="True" options="{'no_create_edit': 'True','no_create':'True'}"
                                   attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="date_start" required="True" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="cycle_days" required="True" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="date_end" readonly="True" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <group>
                            <field name="check_scheme_id" required="True" options="{'no_create_edit': 'True','no_create':'True'}"
                                   attrs="{'readonly':[('state','!=','draft')]}" domain="[('state', '=', 'approved')]"/>
                            <field name="credit_limit" required="True" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="ratio" required="True" attrs="{'readonly':[('state','!=','draft')]}" widget="percentage"/>
                            <field name="order_limit" required="True" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="overdue_days" required="True" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="overdue_limit" required="True" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="overdue_ratio" required="True" attrs="{'readonly':[('state','!=','draft')]}" widget="percentage"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="credit_profile_filter" model="ir.ui.view">
        <!--search view-->
        <field name="name">ps.credit.profile.select</field>
        <field name="model">ps.credit.profile</field>
        <field name="arch" type="xml">
            <search string="Search Credit Profile">
                <field name="partner_id"/>
                <filter name="Draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="Confirmed" string="Confirmed" domain="[('state','=','confirmed')]"/>
                <filter name="Closed" string="Closed" domain="[('state','=','closed')]"/>
                <group expand="0" string="Group By">
                    <filter name="state" string="State" domain="[]" context="{'group_by':'state'}"/>
                    <filter name="currency" string="Currency" domain="[]" context="{'group_by':'currency_id'}"/>
                    <filter name="level_id" string="Level" domain="[]" context="{'group_by':'level_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_window_credit_profile" model="ir.actions.act_window">
        <!--action to credit_profile_tree-->
        <field name="name">Credit Profile</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ps.credit.profile</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="credit_profile_tree"/>
    </record>
</odoo>