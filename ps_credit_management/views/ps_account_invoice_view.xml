<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_ps_invoice_form_inherit" model="ir.ui.view">
            <field name="name">view_ps_invoice_form_inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="cash_rounding_id" position="after">
                    <field name="ps_picking_id" attrs="{'invisible':[('origin','!=',False)]}"
                           domain="[('partner_id','=',partner_id),('state','=','done')]"/>
                </field>
                <xpath expr="//tree/field[@name='currency_id']" position="after">
                    <field name="ps_picking_id" invisible="1"/>
                    <field name="ps_move_id" invisible="1"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
