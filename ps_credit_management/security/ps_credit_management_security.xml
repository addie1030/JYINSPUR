<?xml version="1.0"?>
<odoo>
    <record id="group_credit_management" model="ir.module.category">
        <field name="name">Credit Management</field>
        <field name="sequence">113</field>
    </record>

    <record id="group_credit_officer" model="res.groups">
        <field name="name">Credit Officer</field>
        <field name="category_id" ref="group_credit_management"/>
        <field name="credit_officer" eval="[(4, ref('base.group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_credit_check_manager" model="res.groups">
        <field name="name">Credit Check Manager</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>
</odoo>