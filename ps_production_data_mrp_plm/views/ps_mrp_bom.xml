<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_mrp_bom" model="ir.ui.view">
            <field name="name">view_mrp_bom</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="ps_is_default_version" />
                </xpath>
                <xpath expr="//field[@name='bom_line_ids']/tree//field[@name='product_id']" position="after">
                    <field name="product_tmpl_id" invisible="1"/>
                    <field name="ps_child_version_id" context="{'product_tmpl_id': product_tmpl_id}" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                </xpath>
                <field name="version" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <xpath expr="//field[@name='routing_id']" position="after">
                    <field name="version"/>
                </xpath>
            </field>
        </record>

        <record id="view_ps_mrp_bom_form" model="ir.ui.view">
            <field name="name">view_mrp_bom</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="ps_production_data.ps_mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <button name="toggle_active" position="before">
                    <button class="oe_stat_button" name= "button_mrp_eco" type="object" icon="fa-cogs">
                        <field string="ECO(s)" name="eco_count" widget="statinfo" />
                    </button>
                </button>
                <field name="ready_to_produce" position="after">
                    <field name="version" string="Version"/>
                </field>
                <xpath expr="//field[@name='type']" position="after">
                    <field name="ps_is_default_version" />
                </xpath>
                <xpath expr="//field[@name='bom_line_ids']/tree//field[@name='product_id']" position="after">
                    <field name="product_tmpl_id" invisible="1"/>
                    <field name="ps_child_version_id" context="{'product_tmpl_id': product_tmpl_id}" options="{'no_create': True, 'no_edit': True, 'no_open': True}"/>
                </xpath>
                <field name="version" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <xpath expr="//field[@name='routing_id']" position="after">
                    <field name="version"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>