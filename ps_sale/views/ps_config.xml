<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ps_sale_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.sale.in.ps.sale</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//h2[hasclass('mt32')]" position="before">
                    <h2>Company</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box" title="Selling/Returning more than what was initially planned for the product will not be allowed if this is selected.">
                            <div class="o_setting_left_pane">
                                <field name="ps_is_overpass_initial_ordered_sale"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="ps_is_overpass_initial_ordered_sale"/>
                                <div class="text-muted">
                                    Not allow to sell/return more than initially planned
                                </div>
                                <div class="content-group">
                                    <div name="exceeding_sale_info"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>