<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="inherit_ps_priclist_product_view" model="ir.ui.view">
            <field name="name">ps.priclist.product</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@groups='product.group_pricelist_item']" position="before">
                    <div groups="product.group_product_pricelist">
                            <field name="ps_product_ids" >
                                <tree string="Pricelist Items">
                                    <field name="name" string="Production"/>
                                </tree>
                            </field>
                    </div>
                </xpath>
            </field>
        </record>


        <record id="inherit_product_template_form_view" model="ir.ui.view">
            <field name="name">ps.product.template.common.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="item_ids" position="replace">
                    <field name="item_ids" nolabel="1" readonly="1"
                           context="{'default_base':'list_price', 'default_applied_on' :'1_product'}">
                    </field>
                </field>

            </field>
        </record>

    </data>
</odoo>