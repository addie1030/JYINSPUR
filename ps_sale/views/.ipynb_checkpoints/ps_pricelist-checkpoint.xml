<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--继承价格表，添加客户-->
        <record id="inherit_product_pricelist_form" model="ir.ui.view">
            <field name="name">product_list_form</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@groups='product.group_pricelist_item']" position="before">
                    <field name="ps_customer_ids" groups="product.group_pricelist_item"
                           options="{'no_create_edit':True,'no_create': True}" string="customer">
                        <tree editable="bottom">
                            <field name="name" string="customer"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>

        <!--继承客户，修改价格表属性-->
        <record id="inherit_product_res_partner" model="ir.ui.view">
            <field name="name">product_res_partner_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="product.view_partner_property_form"/>
            <field name="arch" type="xml">
                <field name="property_product_pricelist" position="attributes">
                    <attribute name="options">
                        {'no_create_edit':True,'no_create':True}
                    </attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>