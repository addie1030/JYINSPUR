<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_pricelist_change_filter" model="ir.ui.view">
        <field name="name">ps.product.pricelist.change</field>
        <field name="model">ps.product.pricelist.change</field>
        <field name="arch" type="xml">
            <search string="Search product_pricelist_change ">
                <field name="name" filter_domain="[('name','ilike',self)]"/>
                <field name="date" filter_domain="[('date','ilike',self)]"/>
                <field name="state" filter_domain="[('state','ilike',self)]"/>

                <group expand="0">
                    <filter name="Confirmed" domain="[('state','=','confirmed')]"/>
                    <separator/>
                    <filter name="Assigned" domain="[('state','=','assigned')]"/>
                    <separator/>
                    <filter name="Close" domain="[('state','=','close')]"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_form_ps_product_pricelist_change" model="ir.ui.view">
        <field name="name">ps.product.pricelist.change.form</field>
        <field name="model">ps.product.pricelist.change</field>
        <field eval="1" name="priority"/>
        <field name="arch" type="xml">
            <form string="Price adjustment plan">
                <header>
                    <button name="submit" string="Submit" type="object"
                            attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                    <button name="cancer" string="Cancer" type="object"
                            attrs="{'invisible': [('state', 'not in', ['confirmed','assigned'])]}"/>
                    <button name="draft" string="Set Draft" type="object"
                            attrs="{'invisible': [('state', 'not in', ['cancer'])]}"/>
                    <button name="close" string="Close" type="object"
                            attrs="{'invisible': [('state', 'not in', ['assigned'])]}"
                            groups="sales_team.group_sale_manager"/>
                    <button name="review" string="Review" type="object"
                            attrs="{'invisible': [('state', 'not in', ['confirmed'])]}"
                            groups="sales_team.group_sale_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,assigned,close,cancer" />
                </header>
                <sheet>
                    <group name="button_box">
                        <div class="oe_left">
                            <button name="load_price_detail" string="Load Price Detail" type="object"
                                    attrs="{'invisible': [('is_add_pricelsit', '!=', False)]}" class="oe_highlight"/>
                        </div>
                    </group>
                    <div>
                        <h2>
                            <field name="name"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="is_add_pricelsit" invisible="1"/>
                            <field name="pricelist_id" required="1"
                                   attrs="{'readonly': [('is_add_pricelsit', '!=', False),'|',('state', '!=', 'draft')]}"
                                   options="{'no_create_edit':True,'no_create':True}"
                            />
                            <field name="currency_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly': [('state', '!=', 'draft')]}" required="1"/>
                            <field name="description" attrs="{'readonly': [('state', '!=', 'draft')]}" required="1"/>
                        </group>
                    </group>
                    <div>
                        <field name="change_lines_ids" attrs="{'readonly': [('state', '!=', 'draft')],
                        'invisible': [('is_add_pricelsit', '=', False)]}">
                            <tree editable="bottom">
                                <field name="type" attrs="{'readonly': [('type', '=', 'adjust')]}"/>
                                <field name="product_id" options="{'no_create_edit':True,'no_create':True}"/>
                                <field name="method" required="1" attrs="{'readonly': [('type', '=', 'add')]}"/>
                                <field name="factor" attrs="{'required': [('type', '!=', 'adjust')], 'readonly': [('type', '=', 'add')]}"/>
                                <field name="price_old" readonly="1"/>
                                <field name="price_new" attrs="{'required': [('type', '!=', 'add')]}"/>
                                <field name="min_qty_old" readonly="1"/>
                                <field name="min_qty_new"/>
                                <field name="start_date_old" readonly="1"/>
                                <field name="start_date_new"/>
                                <field name="end_date_old" readonly="1"/>
                                <field name="end_date_new"/>
                            </tree>
                        </field>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_ps_product_pricelist_change" model="ir.ui.view">
        <field name="name">ps.product.pricelist.change.tree</field>
        <field name="model">ps.product.pricelist.change</field>
        <field name="arch" type="xml">
            <tree string="Price adjustment plan" default_order="name desc,date desc">
                <field name="name"/>
                <field name="date"/>
                <field name="pricelist_id"/>
                <field name="currency_id"/>
                <field name="description"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_form_ps_product_pricelist_change_line" model="ir.ui.view">
        <field name="name">ps.product.pricelist.change.form.line</field>
        <field name="model">ps.product.pricelist.change.line</field>
        <field name="arch" type="xml">
            <form string="Price adjustment plan">
                <group>
                    <group>
                        <field name="type" attrs="{'readonly': [('type', '=', 'adjust')]}"/>
                        <field name="product_id" options="{'no_create_edit':True,'no_create':True}"/>
                        <field name="method" required="1"/>
                        <field name="factor" attrs="{'required': [('type', '!=', 'adjust')]}"/>
                    </group>
                    <group>
                        <field name="price_old" readonly="1"/>
                        <field name="price_new" attrs="{'required': [('type', '!=', 'add')]}"/>
                        <field name="min_qty_old" readonly="1"/>
                        <field name="min_qty_new"/>
                        <field name="start_date_old" readonly="1"/>
                        <field name="start_date_new"/>
                        <field name="end_date_old" readonly="1"/>
                        <field name="end_date_new"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_ps_product_pricelist_change" model="ir.actions.act_window">
        <field name="name">Price adjustment plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ps.product.pricelist.change</field>
        <field name="view_type">form</field>
        <field name="view_model">tree,form,calendar,graph,pivot,kanban</field>
        <field name="view_id" ref="view_tree_ps_product_pricelist_change"/>
    </record>

    <menuitem id="menu_ps_product_pricelist_change"
              name="Price adjustment plan"
              parent="sale.product_menu_catalog"
              groups="ps_sale.group_price_change_user"
              action="action_ps_product_pricelist_change"
              sequence="100"
    />


</odoo>