<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sales_order_tree" model="ir.ui.view">
            <field name="name">ps.sale.order.line.tree</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <tree string="Sale Order" create="false" delete="false">
                    <field name="order_partner_id"/>
                    <field name="order_id"/>
                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="ps_date_done"/>
                    <field name="product_uom_qty"/>
                    <field name="qty_delivered"/>
                    <field name="qty_invoiced"/>
                    <field name="price_unit"/>
                    <field name="price_tax"/>
                    <field name="price_subtotal"/>
                </tree>
            </field>
        </record>

        <record id="action_window_ps_sale_line" model="ir.actions.act_window">
            <field name="name">Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="sales_order_tree"/>
            <field name="domain">[('state', 'in', ('done', 'sale'))]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create" style="display:block">
                    No record.
                </p>
            </field>
        </record>

        <record id="view_ps_sales_order_line_filter" model="ir.ui.view">
            <field name="name">ps.sale.order.line.select</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_sales_order_line_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//group" position="after">
                    <filter name="groupby_partner" string="Customer" domain="[]" context="{'group_by':'order_partner_id'}"/>
                </xpath>
            </field>
        </record>

        <menuitem id="menu_account_details"
                  name="Details"
                  parent="sale.sale_order_menu"
                  groups="sales_team.group_sale_salesman"
                  action="action_window_ps_sale_line"
                  sequence="101"/>

    </data>
</odoo>