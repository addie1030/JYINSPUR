<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- 应用系统分类设置 -->
	<record model="ir.module.category" id="module_category_combined_statements">
		<field name="name">Combined Statements</field>
		<field name="description">Help you manage your consolidated reports.</field>
		<field name="sequence">99</field>
	</record>

	<!--角色定义-->
	<record id="group_combined_statements_user" model="res.groups">
		<field name="name">User</field>
		<field name="category_id" ref="module_category_combined_statements" />
		<field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
	</record>

	<record id="group_combined_statements_financial_manager" model="res.groups">
		<field name="name">Financial Manager</field>
		<field name="category_id" ref="module_category_combined_statements" />
		<field name="implied_ids" eval="[(4, ref('group_combined_statements_user'))]" />
	</record>

	<record id="group_combined_statements_manager" model="res.groups">
		<field name="name">Manager</field>
		<field name="category_id" ref="module_category_combined_statements" />
		<field name="implied_ids" eval="[(4, ref('group_combined_statements_financial_manager'))]" />
		<!--<field name="users" eval="[(4, ref('base.user_root'))]" />-->
		<field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
	</record>

	<data>

		<!-- 默认用户权限 -->
		<record id="base.default_user" model="res.users">
			<field name="groups_id" eval="[(4, ref('group_combined_statements_user'))]" />
		</record>

		<!-- 集团树架构过滤规则 -->
		<record id="combined_statements_organization_rule" model="ir.rule">
			<field name="name">Group Tree Architecture Filtering Rules</field>
			<field name="model_id" ref="model_ps_combined_statements_organization" />
			<field name="groups" eval="[(4, ref('ps_combined_statements.group_combined_statements_user')),(4, ref('ps_combined_statements.group_combined_statements_financial_manager'))]" />
			<field name="domain_force">[('id', 'in', [x.id for x in user.organization_ids])]</field>
		</record>

		<record id="combined_statements_organization_manager_rule" model="ir.rule">
			<field name="name">Group Tree Architecture Filtration Rule Administrator</field>
			<field name="model_id" ref="model_ps_combined_statements_organization" />
			<field name="groups" eval="[(4, ref('ps_combined_statements.group_combined_statements_manager'))]" />
			<field name="domain_force">[(1 ,'=', 1)]</field>
		</record>



		<!-- 投资表过滤规则 -->
		<record id="combined_statements_equity_investment_rule" model="ir.rule">
			<field name="name">Investment Statement Filtering Rules</field>
			<field name="model_id" ref="model_ps_combined_statements_equity_investment" />
			<field name="groups" eval="[(4, ref('ps_combined_statements.group_combined_statements_user')),(4, ref('ps_combined_statements.group_combined_statements_financial_manager'))]" />
			<field name="domain_force">[('investment_organization_id', 'in', [x.id for x in user.organization_ids])]</field>
		</record>

		<record id="combined_statements_equity_investment_manager_rule" model="ir.rule">
			<field name="name">Investment Statement Filtration Rule Manager</field>
			<field name="model_id" ref="model_ps_combined_statements_equity_investment" />
			<field name="groups" eval="[(4, ref('ps_combined_statements.group_combined_statements_manager'))]" />
			<field name="domain_force">[(1 ,'=', 1)]</field>
		</record>




		<!--被投资表过滤-->
		<record id="combined_statements_equity_investment_reverse_rule" model="ir.rule">
			<field name="name">FILTERING RULES OF INVESTMENT TABLE</field>
			<field name="model_id" ref="model_ps_combined_statements_equity_investment_reverse" />
			<field name="groups" eval="[(4, ref('ps_combined_statements.group_combined_statements_user')),(4, ref('ps_combined_statements.group_combined_statements_financial_manager'))]" />
			<field name="domain_force">[('investment_organization_id', 'in', [x.id for x in user.organization_ids])]</field>
		</record>

		<record id="combined_statements_equity_investment_reverse_manager_rule" model="ir.rule">
			<field name="name">Invested Statement Filter Rule Manager</field>
			<field name="model_id" ref="model_ps_combined_statements_equity_investment_reverse" />
			<field name="groups" eval="[(4, ref('ps_combined_statements.group_combined_statements_manager'))]" />
			<field name="domain_force">[(1 ,'=', 1)]</field>
		</record>




		<!--子公司净利润表-->
		<record id="subsidiary_profit_statement_rule" model="ir.rule">
			<field name="name">Subsidiary Company Profit Statement Filtering Rules</field>
