<?xml version="1.0" encoding="UTF-8"?>
<template id="template" xml:space="preserve">
    <t t-extend="ListView.buttons">
        <t t-jquery="button.o_list_button_save" t-operation="after">
            <button t-if="widget.model == 'ps.combined.statements.inside.credit.debt'" type="button" class="btn btn-sm btn-primary o_list_inside_credit_debit">创建</button>
            <button t-if="widget.model == 'ps.combined.statements.inside.credit.debt'" type="button" class="btn btn-sm btn-primary o_list_inside_credit_debit_carry">结转</button>
            <button t-if="widget.model == 'ps.combined.statements.inside.credit.debt'" type="button" class="btn btn-sm btn-primary o_list_inside_credit_debit_check">对账</button>
        </t>
    </t>

	<!--对账-->
	<t t-name="InsideCreditDebtCheckInfo">
		<table class="table table-striped table-hover table-condensed">
			<tbody>
				<tr>
            		<th>期间</th><th>本公司</th><th>关联公司</th><th>对账名称</th><th>对账金额</th><th>本公司</th><th>关联公司</th><th>对账名称</th><th>对账金额</th>

				</tr>
				<t t-foreach="data" t-as="line">
					<tr>
						<td><t t-esc="line.period"/></td>
						<td><t t-esc="line.investment_organization_id"/></td>
						<td><t t-esc="line.investee_organization_id"/></td>
						<td><t t-esc="line.X_field"/></td>
						<td><t t-esc="line.X_field_price"/></td>
						<td><t t-esc="line.investment_organization_id1"/></td>
						<td><t t-esc="line.investee_organization_id2"/></td>
						<td><t t-esc="line.y_field"/></td>
						<td><t t-esc="line.y_field_price"/></td>
					</tr>
				</t>
			</tbody>
		</table>
    </t>


	<!--创建，对账-->
	<t t-name="InsideCreditDebtInfo">
        <div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="organization_option">公司组织</label>
                    <select name="organization_option" id="organization_option" class="form-control">
                        <t t-foreach="data" t-as="d">
                            <option t-att-value="d['code']"><t t-raw="d['name']"/></option>
                        </t>
                    </select>
                </div>
            </div>
			<div class="col-md-4">
				<div class="form-group">
					<label for="col_index">期间</label>
					<input type="month" class="form-control" id="period" name="period" />
				</div>
			</div>
        </div>
	</t>

	<!--结转-->
	<t t-name="InsideCreditDebtCarryInfo">
        <div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="organization_option">公司组织</label>
                    <select name="organization_option" id="organization_option" class="form-control">
                        <t t-foreach="data" t-as="d">
                            <option t-att-value="d['code']"><t t-raw="d['name']"/></option>
                        </t>
                    </select>
                </div>
            </div>
			<div class="col-md-4">
				<div class="form-group">
					<label for="period">期间</label>
					<input type="month" class="form-control" id="period" name="period" />
				</div>
			</div>
			<div class="col-md-4">
				<div class="form-group">
					<label for="carry_period">结转期间</label>
					<input type="month" class="form-control" id="carry_period" name="carry_period" />
				</div>
			</div>
			<div class="col-md-4">
				<div class="form-group">
					<p>&amp;nbsp;&amp;nbsp;</p>
					<label for="o_bg_img_opt">结转所有</label>
					<input type="checkbox" id="is_all" name="is_all" value="all"/>
				</div>
			</div>
        </div>
	</t>

</template>