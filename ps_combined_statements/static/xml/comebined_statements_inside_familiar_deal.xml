<?xml version="1.0" encoding="UTF-8"?>
<template id="template" xml:space="preserve">
    <t t-extend="ListView.buttons">
        <t t-jquery="button.o_list_button_save" t-operation="after">
            <button t-if="widget.model == 'ps.combined.statements.inside.familiar.deal'" type="button" class="btn btn-sm btn-primary o_list_inside_familiar_deal">创建</button>
        </t>
    </t>

	<!--常见内部交易更新数据-->
	<t t-name="InsideFamiliarDealInfo">
        <div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="organization_option">公司组织</label>
                    <select name="organization_option" id="organization_option" class="form-control">
                        <t t-foreach="data" t-as="d">
                            <option t-att-value="d['code']"><t t-raw="d['name']"/></option>
                        </t>
                    </select>
                </div>
            </div>
			<div class="col-md-4">
				<div class="form-group">
					<label for="col_index">期间</label>
					<input type="month" class="form-control" id="period" name="period" />
				</div>
			</div>
        </div>
	</t>

</template>