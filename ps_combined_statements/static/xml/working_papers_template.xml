<?xml version="1.0" encoding="utf-8"?>
<templates>
	<t t-name="combined_statements.working_papers_btn">
		<!--<button type="button" class="btn btn-sm btn-primary o_button_define">底稿定义</button>-->
		<button type="button" class="btn btn-sm btn-primary o_button_open">查看</button>
	</t>

	<t t-extend="ListView.buttons">
		<t t-jquery=".o_list_buttons" t-operation="append">
			<t t-if="widget.model == 'ps.combined.statements.working.paper'">
				<t t-call="combined_statements.working_papers_btn" />
			</t>
		</t>
	</t>

	<t t-name="working_papers_menuBar">
		<div name='journaling_toolsBar' id='journaling_toolsBar' class="journaling_toolsBar">
			<section class="left">
				<button id="btnCarryOver" class="btn btn-primary btn-sm">结转</button>
				<button id="btnRecalculate" class="btn btn-primary btn-sm">计算</button>
				<button id="btnSetFormulas" class="btn btn-primary btn-sm">合并数公式</button>
				<button id='btnSave' class="btn btn-primary btn-sm">保存</button>
			</section>
		</div>
	</t>

	<t t-name="carryOver">
		<div class="carry-over">
			<div class="form-group">
				<label for="col_index">结转日期</label>
				<input type="month" class="form-control" name="carry_over" />
			</div>
		</div>
	</t>

	<!-- 底稿定义模板容器 -->
	<t t-name="combined_statements.working_papers_container">

		<!--调用套表定义的模板-->
		<t t-call="working_papers_menuBar" />
		<!--<t t-call="spreadsheets_toolsBar" />-->

		<div class="wpd_tutorial">
			<div class="options">
				<div class="option-row">
					<div id="formulaBar" contenteditable="true" spellcheck="false">
					</div>
				</div>
			</div>
			<div class="wpd_spreadsheets" id="ss">

			</div>
		</div>
	</t>
</templates>

