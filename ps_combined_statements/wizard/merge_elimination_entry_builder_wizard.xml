<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<record id="merge_elimination_entry_builder_form" model="ir.ui.view">
			<field name="name">Merge offset entry generation</field>
			<field name="model">ps.merge.elimination.entry.builder.wizard</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="merge_organization" ooption="{'no_open':True,'no_create':True}" />
							<field name="account_period" />
							<field name="elimination" widget="many2many_checkboxes" ooption="{'no_open':True,'no_create':True}" />
						</group>
					</sheet>
					<footer>
						<button name="builder_elimination_info"
								type="object"
								string="Confirm generation"
								class="oe_highlight" />
						<button special="cancel" string="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="merge_elimination_entry_builder_act_window" model="ir.actions.act_window">
		    <field name="name">Merge offset entry Generation Wizard</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">ps.merge.elimination.entry.builder.wizard</field>
			<field name="target">new</field>
		    <field name="view_mode">form</field>
		</record>

		<menuitem id="merge_elimination_entry_builder_menu" name="Merge offset entry generation" parent="combined_statements_merger_counteract_business" action="merge_elimination_entry_builder_act_window" sequence="2" />

	</data>
</odoo>