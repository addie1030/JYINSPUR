<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!--Adjustment to generate wizard from-->
		<record id="adjust_statements_generate_wizard_form" model="ir.ui.view">
			<field name="name">ps.adjust.statements.generate.wizard.form</field>
			<field name="model">ps.adjust.statements.generate.wizard</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="organization_id" options="{'no_create': True}" />
							<field name="account_period" options="{'no_create': True}" />
							<field name="project_id" options="{'no_create': True}" />
						</group>
					</sheet>

					<footer>
						<button name="generate_adjust_statements_papers"
								type="object"
								string="Adjustment table generation"
								class="oe_highlight" />
						<button special="cancel" string="Close" />
					</footer>
				</form>
			</field>
		</record>

		<!--Adjustment to generate wizard action-->
		<record id="adjust_statements_generate_wizard_act_window" model="ir.actions.act_window">
			<field name="name">Adjustment Table Generation Wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="target">new</field>
			<field name="res_model">ps.adjust.statements.generate.wizard</field>
			<field name="view_id" ref="adjust_statements_generate_wizard_form" />
			<field name="view_mode">form</field>
		</record>

		<!-- Adjustment to generate menu -->
		<menuitem id="adjust_statements_generate_wizard_menu"
				  name="Adjustment table generation"
				  parent="combined_statements_merger_adjustment_business"
				  action="adjust_statements_generate_wizard_act_window"
				  sequence="5" />
	</data>
</odoo>