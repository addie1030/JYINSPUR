<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!--Merge report generation form-->
		<record id="merge_statements_generate_wizard_form" model="ir.ui.view">
			<field name="name">Merge Statements Generate Wizard Form</field>
			<field name="model">ps.merge.statements.generate.wizard</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="merge_organization" options="{'no_create': True}" />
							<field name="account_period" options="{'no_create': True}" />
							<field name="project_id" options="{'no_create': True}" />
						</group>
					</sheet>

					<footer>
						<button name="generate_merge_statements_papers"
								type="object"
								string="Generate reports"
								class="oe_highlight" />
						<button special="cancel" string="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<!--Merge report generation wizard window-->
		<record id="merge_statements_generate_wizard_window" model="ir.actions.act_window">
			<field name="name">Merge Report Generation Wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="target">new</field>
			<field name="res_model">ps.merge.statements.generate.wizard</field>
			<field name="view_id" ref="merge_statements_generate_wizard_form" />
			<field name="view_mode">form</field>
		</record>

		<!-- Merge report generation menu -->
		<menuitem id="merge_statements_generate_wizard_menu"
				  name="Consolidated report generation"
				  parent="combined_statements_merger_counteract_business"
				  action="merge_statements_generate_wizard_window"
				  sequence="20"/>
	</data>
</odoo>