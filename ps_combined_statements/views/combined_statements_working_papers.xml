<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		
		<record id="combined_statements_working_paper_project_tree" model="ir.ui.view">
		    <field name="name">ps.combined.statements.working.paper.project.tree</field>
		    <field name="model">ps.combined.statements.working.paper.project</field>
		    <field name="arch" type="xml">
		        <tree create="false" import="false">
					<field name="project_id" />
					<field name="merger_organization" />
					<field name="period" />
					<field name="workingpaper_ids" />
					<!--<field name="company_id" />-->
				</tree>
		    </field>
		</record>
		
		<record id="combined_statements_working_paper_project_act_window" model="ir.actions.act_window">
		    <field name="name">Work manuscript inquiry</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">ps.combined.statements.working.paper.project</field>
		    <field name="view_mode">tree</field>
		</record>

		<!-- This Menu Item must have a parent and an action -->
		<menuitem id="combined_statements_working_paper_project_menu"
				  name="Work manuscript inquiry"
				  parent="combined_statements_merger_related_search"
				  action="combined_statements_working_paper_project_act_window"
				  sequence="10"/>
    </data>
</odoo>