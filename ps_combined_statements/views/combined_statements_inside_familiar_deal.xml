<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!--Common transactions within tables form-->
		<record id="combined_statements_inside_familiar_deal_form" model="ir.ui.view">
			<field name="name">inside familiar deal</field>
			<field name="model">ps.combined.statements.inside.familiar.deal</field>
			<field name="arch" type="xml">
				<form create="false">
					<sheet>

						<div class="oe_button_box" name="button_box">
							<button name="toggle_active"
									type="object"
									confirm="(Un)archiving a project automatically (un)archives its tasks and issues. Do you want to proceed?"
									class="oe_stat_button"
									icon="fa-archive">
								<field name="active" widget="boolean_button" options='{"terminology": "archive"}' />
							</button>
						</div>

						<group>
							<group>
								<field name="investment_organization_id" />
								<field name="period" />
								<field name="taking_price" />
								<field name="taking_costs" />
							</group>
							<group>
								<field name="investee_organization_id" />
								<field name="manage_costs" />
								<field name="sell_costs" />
								<!--<field name="business_type" />-->
								<!--<field name="company_id" groups="base.group_multi_company" />-->
							</group>
						</group>
						<notebook create="false" delete="false">
						    <page string="Offsetting business" >
						        <group>
						            <field name="eli_ids" nolabel="1" readonly="1"/>
						        </group>
						    </page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<!--Business types -->
		<record id="combined_statements_business_type_tree" model="ir.ui.view">
		    <field name="name">Business type</field>
		    <field name="model">ps.combined.statements.business.type</field>
		    <field name="arch" type="xml">
		        <tree string="">
		            <field name="name"/>
		            <field name="code"/>
		        </tree>
		    </field>
		</record>

		<!--Business types window-->
		<record id="combined_statements_business_type_window" model="ir.actions.act_window">
		    <field name="name">Business type</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">ps.combined.statements.business.type</field>
		    <field name="view_mode">tree,form</field>
		</record>



		<!--Common transactions within tables tree-->
		<record id="combined_statements_inside_familiar_deal_tree" model="ir.ui.view">
			<field name="name">inside familiar deal</field>
			<field name="model">ps.combined.statements.inside.familiar.deal</field>
			<field name="arch" type="xml">
				<tree create="false">
					<field name="investment_organization_id" />
					<field name="investee_organization_id" />
					<!--<field name="business_type" />-->
					<field name="period" />
					<field name="taking_price" />
					<field name="taking_costs" />
					<field name="manage_costs" />
					<field name="sell_costs" />
					<!--<field name="company_id" groups="base.group_multi_company" />-->
				</tree>
			</field>
		</record>
		<!--Common transactions within tables window-->
		<record id="combined_statements_inside_familiar_deal_window" model="ir.actions.act_window">
			<field name="name">Internal Common Transaction Tables</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">ps.combined.statements.inside.familiar.deal</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!--Common transactions within tables menu-->
		<menuitem id="combined_statements_inside_familiar_deal_menu"
				  name="Internal Common Transaction Tables"
				  parent="combined_statements_merger_inside"
				  action="combined_statements_inside_familiar_deal_window"
				  sequence="1" />

		<!--Business types menu-->
		<menuitem id="combined_statements_business_type_menu"
				  name="Business type"
				  parent="combined_statements_basis_files"
				  action="combined_statements_business_type_window"
				  sequence="15" />

	</data>
</odoo>