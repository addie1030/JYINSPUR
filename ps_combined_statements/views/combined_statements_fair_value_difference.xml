<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<!--The fair value difference table form-->
		<record id="combined_statements_fair_value_difference_form" model="ir.ui.view">
			<field name="name">fair value difference</field>
			<field name="model">ps.combined.statements.fair.value.difference</field>
			<field name="arch" type="xml">
				<form>
					<sheet>

						<div class="oe_button_box" name="button_box">
							<button name="toggle_active"
									type="object"
									confirm="(Un)archiving a project automatically (un)archives its tasks and issues. Do you want to proceed?"
									class="oe_stat_button"
									icon="fa-archive">
								<field name="active" widget="boolean_button" options='{"terminology": "archive"}' />
							</button>
						</div>

						<group>
							<group>

								<field name="investment_organization_id" />
								<field name="investee_organization_id" />
								<field name="investment_day" />
								<field name="period" />
								<field name="adjustment_item" />
								<field name="asset_id" />
								<field name="asset_code" />
								<field name="fair_value" />
								<field name="book_value" />
							</group>
							<group>
								<field name="balance" />
								<field name="depreciation" />
								<field name="depreciation_price" />
								<field name="dispose_moth" />
								<field name="dispose_price" />
								<field name="change_data" />
								<field name="change_type" />
								<field name="clear_data" />
								<!--<field name="company_id" groups="base.group_multi_company" />-->
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!--The fair value difference table tree-->
		<record id="combined_statements_fair_value_difference_tree" model="ir.ui.view">
			<field name="name">fair value difference</field>
			<field name="model">ps.combined.statements.fair.value.difference</field>
		    <field name="arch" type="xml">
		        <tree>
					<field name="investment_organization_id" />
					<field name="investee_organization_id" />
					<field name="investment_day" />
					<field name="period" />
					<field name="adjustment_item" />
					<field name="asset_id" />
					<field name="fair_value" />
					<field name="book_value" />
					<field name="change_type" />
		        </tree>
		    </field>
		</record>
		<!--The fair value difference table window-->
		<record id="combined_statements_fair_value_difference_act_window" model="ir.actions.act_window">
		    <field name="name">Fair Value Difference Statement</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">ps.combined.statements.fair.value.difference</field>
		    <field name="view_mode">tree,form</field>
		</record>

		<!--The fair value difference table menu-->
		<menuitem id="combined_statements_fair_value_difference_menu"
				  name="Fair Value Difference Statement"
				  parent="combined_statements_merger_investment"
				  action="combined_statements_fair_value_difference_act_window"
				  sequence="75"/>

    </data>
</odoo>