<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!--Inventory transactions within schedule form-->
		<record id="combined_statements_inside_inventory_deal_form" model="ir.ui.view">
			<field name="name">inside inventory deal</field>
			<field name="model">combined.statements.inside.inventory.deal</field>
			<field name="arch" type="xml">
				<form>
					<sheet>

						<div class="oe_button_box" name="button_box">
							<button name="toggle_active"
									type="object"
									confirm="(Un)archiving a project automatically (un)archives its tasks and issues. Do you want to proceed?"
									class="oe_stat_button"
									icon="fa-archive">
								<field name="active" widget="boolean_button" options='{"terminology": "archive"}' />
							</button>
						</div>

						<group>
							<group>
								<field name="investment_organization_id" />
								<field name="business_type" />
								<field name="deal_day" />
								<field name="taking_price" />
								<field name="taking_costs" />
								<field name="unloss_price" />
								<field name="prior_unloss_price" />
							</group>
							<group>
								<field name="investee_organization_id" />
								<field name="period" />
								<field name="curr_realize_price" />
								<field name="curr_remain_price" />
								<field name="ago_unloss_price" />
								<field name="ago_loss_price" />
								<field name="ago_remain_price" />
							</group>
						</group>

						<!--<group>-->
							<!--<field name="company_id" groups="base.group_multi_company" />-->
						<!--</group>-->
					</sheet>
				</form>
			</field>
		</record>
		<!--Inventory transactions within schedule tree-->
		<record id="combined_statements_inside_inventory_deal_tree" model="ir.ui.view">
			<field name="name">inside inventory deal</field>
			<field name="model">combined.statements.inside.inventory.deal</field>
			<field name="arch" type="xml">
				<tree>
					<field name="investment_organization_id" />
					<field name="investee_organization_id" />
					<field name="business_type" />
					<field name="period" />
					<field name="deal_day" />
					<field name="taking_price" />
					<field name="taking_costs" />
					<field name="unloss_price" />
					<field name="curr_realize_price" />
					<field name="curr_remain_price" />
					<!--<field name="company_id" groups="base.group_multi_company" />-->
				</tree>
			</field>
		</record>
		<!--Inventory transactions within schedule window-->
		<record id="combined_statements_inside_inventory_deal_window" model="ir.actions.act_window">
			<field name="name">Detailed List of Internal Inventory Transactions</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">combined.statements.inside.inventory.deal</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!--Inventory transactions within schedule menu-->
		<menuitem id="combined_statements_inside_inventory_deal_menu"
				  name="Detailed List of Internal Inventory Transactions"
				  parent="combined_statements_merger_inside"
				  action="combined_statements_inside_inventory_deal_window"
				  sequence="15" />

	</data>
</odoo>