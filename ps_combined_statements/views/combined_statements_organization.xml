<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!--The group tree Form-->
		<record id="combined_statements_organization_form" model="ir.ui.view">
			<field name="name">Group structure</field>
			<field name="model">ps.combined.statements.organization</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<button name="toggle_active"
									type="object"
									confirm="(Un)archiving a project automatically (un)archives its tasks and issues. Do you want to proceed?"
									class="oe_stat_button"
									icon="fa-archive">
								<field name="active" widget="boolean_button" options='{"terminology": "archive"}' />
							</button>
						</div>

						<group>
							<group>
								<field name="tree_id" />
								<field name="ref_company_id" attrs="{'required': [('is_entity_company', '=', True)]}" options="{'no_create_edit': True}"/>
								<field name="code" />
								<field name="name" />
								<field name="parent_id" />
							</group>
							<group>
								<field name="is_entity_company" />
								<field name="is_parent_company" />
								<field name="is_descendant_company" />
								<field name="is_branch_office" />
							</group>
						</group>

						<group>
							<notebook>
							    <page>
									<field name="child_ids" mode="tree">
										<tree>
											<field name="tree_id" />
											<field name="code" />
											<field name="name" />
											<field name="is_entity_company" widget="boolean"/>
											<field name="is_parent_company" widget="boolean"/>
											<field name="is_descendant_company" widget="boolean"/>
											<field name="is_branch_office" widget="boolean"/>
										</tree>
									</field>
								</page>
							</notebook>
						</group>

					</sheet>
				</form>
			</field>
		</record>

		<!--The group tree Tree-->
		<record id="combined_statements_organization_tree" model="ir.ui.view">
			<field name="name">>Group Tree Architecture</field>
			<field name="model">ps.combined.statements.organization</field>
			<field name="arch" type="xml">
				<tree>
					<field name="tree_id" />
					<field name="ref_company_id" />
					<field name="code" />
					<field name="name" />
					<field name="parent_id" />
					<field name="is_entity_company" widget="boolean"/>
					<field name="is_parent_company" widget="boolean"/>
					<field name="is_descendant_company" widget="boolean"/>
					<field name="is_branch_office" widget="boolean"/>
				</tree>
			</field>
		</record>


		<!-- The group tree Search -->
		<record id="combined_statements_organization_search" model="ir.ui.view">
			<field name="name">Company search</field>
			<field name="model">ps.combined.statements.organization</field>
			<field name="arch" type="xml">
				<search>
					<!--<field name="tree_id" options="{'no_create': True, 'no_open': True}"/>-->
					<!--<field name="code" />-->
					<!--<field name="name" />-->
					<!--<filter string="The archive " name="no_archive" domain="[('active', '=', False)]" />-->
					<!--<filter string="undocumented " name="archive" domain="[('active', '=', True)]" />-->
					<!--<separator />-->
					<!--<filter string="entity " name="entity_company" domain="[('is_entity_company', '=', True)]" />-->
					<!--<filter string="The parent company " name="parent_company" domain="[('is_parent_company', '=', True)]" />-->
					<!--<filter string="Children company " name="descendant_company" domain="[('is_descendant_company', '=', True)]" />-->
					<!--<filter string="branch " name="branch_office" domain="[('is_branch_office', '=', True)]" />-->
					<!--<group expand="0" string="Group By">-->
						<!--<filter string="Oraganization Tree" name="tree_id" domain="[]" context="{'group_by': 'tree_id'}"/>-->
					<!--</group>-->
				</search>
			</field>
		</record>

		<!--The group tree window-->
		<record id="combined_statements_organization_act_window" model="ir.actions.act_window">
			<field name="name">Group Tree Architecture</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">ps.combined.statements.organization</field>
			<field name="search_view_id" ref="combined_statements_organization_search" />
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Here you can create your organization tree
				</p>
			</field>
		</record>

		<!-- The group tree tree -->
		<record id="combined_statements_organization_tree_list" model="ir.ui.view">
			<field name="name">Group tree</field>
			<field name="model">ps.combined.statements.organization.tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" />
					<field name="code" />
				</tree>
			</field>
		</record>


		<record id="combined_statements_organization_tree_form" model="ir.ui.view">
			<field name="name">Group tree</field>
			<field name="model">ps.combined.statements.organization.tree</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="name" />
							</group>
							<group>
								<field name="code" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="combined_statements_organization_tree_act_window" model="ir.actions.act_window">
		    <field name="name">Group tree name</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">ps.combined.statements.organization.tree</field>
		    <field name="view_mode">tree,form</field>
		</record>


		<record id="combined_statements_organization_tree_list_tree" model="ir.ui.view">
			<field name="name">Group Tree List</field>
			<field name="model">ps.combined.statements.organization</field>
			<field name="type">tree</field>
			<field name="field_parent">child_ids</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" />
					<field name="code" />
					<field name="parent_id" />
					<field name="is_entity_company" />
					<!--<field name="company_id" groups="base.group_multi_company" />-->
				</tree>
			</field>
		</record>

		<record id="combined_statements_organization_tree_list_tree_window" model="ir.actions.act_window">
			<field name="name">Group Tree View</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">ps.combined.statements.organization</field>
			<field name="view_type">tree</field>
			<field name="view_id" ref="combined_statements_organization_tree_list_tree" />
		</record>

		<!--Group tree structure view -->
		<menuitem id="combined_statements_organization_tree_list_tree_menu"
				  name="Group Tree View"
				  parent="combined_statements_report_style_definition"
				  action="combined_statements_organization_tree_list_tree_window"
				  sequence="20" />


		<!--Group tree architecture Menu-->
		<menuitem id="combined_statements_organization_tree_menu"
				  name="Group tree name"
				  parent="combined_statements_basis_files"
				  action="combined_statements_organization_tree_act_window"
				  sequence="5" />

		<!--The group tree Menu-->
		<menuitem id="combined_statements_organization_menu"
				  name="Group Tree Architecture"
				  parent="combined_statements_report_style_definition"
				  action="combined_statements_organization_act_window"
				  sequence="15" />

	</data>
</odoo>