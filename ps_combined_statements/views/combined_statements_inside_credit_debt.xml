<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!--Internal creditor's rights debt table form-->
		<record id="combined_statements_inside_credit_debt_form" model="ir.ui.view">
			<field name="name">inside credit debt</field>
			<field name="model">ps.combined.statements.inside.credit.debt</field>
			<field name="arch" type="xml">
				<form>
					<sheet>

						<div class="oe_button_box" name="button_box">
							<button name="toggle_active"
									type="object"
									confirm="(Un)archiving a project automatically (un)archives its tasks and issues. Do you want to proceed?"
									class="oe_stat_button"
									icon="fa-archive">
								<field name="active" widget="boolean_button" options='{"terminology": "archive"}' />
							</button>
						</div>

						<group>
							<group>
								<field name="investment_organization_id" />
								<field name="period" />
								<field name="receivable" />
								<field name="dividends_receivable" />
								<field name="other_receivable" />
								<field name="deposit_receivable" />
								<field name="notes_receivable" />
								<field name="interest_receivable" />
							</group>
							<group>
								<field name="investee_organization_id" />
								<field name="payable" />
								<field name="dividends_payable" />
								<field name="other_payable" />
								<field name="deposit_payable" />
								<field name="notes_payable" />
								<field name="interest_payable" />
								<field name="cre_type" />
							</group>
						</group>

						<group>
							<!--<field name="company_id" groups="base.group_multi_company" />-->
						</group>
						<notebook create="false" delete="false">
							<page string="Offsetting business">
								<group>
									<field name="eli_ids" nolabel="1" readonly="1"/>
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		<!--Internal creditor's rights debt table tree-->
		<record id="combined_statements_inside_credit_debt_tree" model="ir.ui.view">
			<field name="name">inside credit debt</field>
			<field name="model">ps.combined.statements.inside.credit.debt</field>
			<field name="arch" type="xml">
				<tree create="false" import="True">
					<field name="investment_organization_id" />
					<field name="investee_organization_id" />
					<field name="period" />
					<field name="cre_type" />
					<field name="receivable" />
					<field name="dividends_receivable" />
					<field name="other_receivable" />
					<field name="deposit_receivable" />
					<field name="notes_receivable" />
					<field name="interest_receivable" />
					<field name="payable" />
					<field name="dividends_payable" />
					<field name="other_payable" />
					<field name="deposit_payable" />
					<field name="notes_payable" />
					<field name="interest_payable" />
					<!--<field name="company_id" groups="base.group_multi_company" />-->
				</tree>
			</field>
		</record>

		<!--Internal creditor's rights debt table window-->
		<record id="combined_statements_inside_credit_debt_window" model="ir.actions.act_window">
			<field name="name">Internal statement of claims and liabilities</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">ps.combined.statements.inside.credit.debt</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!--Internal creditor's rights debt table menu-->
		<menuitem id="combined_statements_inside_credit_debt_menu"
				  name="Internal statement of claims and liabilities"
				  parent="combined_statements_merger_inside"
				  action="combined_statements_inside_credit_debt_window"
				  sequence="5" />
	</data>
</odoo>