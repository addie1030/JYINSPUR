<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="core_value_tree_view" model="ir.ui.view">
            <field name="name">Statement of Cash Flow</field>
            <field name="model">ps.core.value</field>
            <field name="arch" type="xml">
                <tree default_order="id desc" editable="top" create="true">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="note"/>
                    <field name="active"/>
                    <field name="core_value_type"/>
                    <field name="company_id" options="{'no_create_edit': True}"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="core_value_action">
            <field name="name">Statement of Cash Flow</field>
            <field name="res_model">ps.core.value</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="Statement of Cash Flow" id="core_value_menu"
                  parent="account.account_management_menu"
                  sequence="2"
                  action="core_value_action"/>

