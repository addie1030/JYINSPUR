<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!--Long-term assets transactions within schedule form-->
		<record id="combined_statements_inside_asset_deal_form" model="ir.ui.view">
			<field name="name">inside asset deal</field>
			<field name="model">ps.combined.statements.inside.asset.deal</field>
			<field name="arch" type="xml">
				<form>
					<sheet>

						<div class="oe_button_box" name="button_box">
							<button name="toggle_active"
									type="object"
									confirm="(Un)archiving a project automatically (un)archives its tasks and issues. Do you want to proceed?"
									class="oe_stat_button"
									icon="fa-archive">
								<field name="active" widget="boolean_button" options='{"terminology": "archive"}' />
							</button>
						</div>

						<group>
							<group>
								<field name="investment_organization_id" />
								<field name="business_type" />
								<field name="deal_day" />
								<field name="period" />
								<field name="asset_id" />
								<field name="asset_code" />
								<field name="report_item" />
								<field name="taking_price" />
								<field name="taking_costs" />
								<field name="taking_out_price" />
							</group>
							<group>
								<field name="investee_organization_id" />
								<field name="taking_out_expenditure" />
								<field name="unrealized_loss" />
								<field name="depreciation" />
								<field name="depreciation_price" />
								<field name="dispose_moth" />
								<field name="dispose_price" />
								<field name="change_data" />
								<field name="change_type" />
								<field name="clear_data" />
							</group>
						</group>

						<group>
							<!--<field name="company_id" groups="base.group_multi_company" />-->
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!--Long-term assets transactions within schedule tree-->
		<record id="combined_statements_inside_asset_deal_tree" model="ir.ui.view">
			<field name="name">inside asset deal</field>
			<field name="model">ps.combined.statements.inside.asset.deal</field>
			<field name="arch" type="xml">
				<tree>
					<field name="investment_organization_id" />
					<field name="investee_organization_id" />
					<field name="business_type" />
					<field name="period" />
					<field name="deal_day" />
					<field name="asset_id" />
					<field name="taking_price" />
					<field name="taking_costs" />
					<field name="taking_out_price" />
					<field name="taking_out_expenditure" />
					<field name="change_type" />
					<field name="clear_data" />
					<!--<field name="company_id" groups="base.group_multi_company" />-->
				</tree>
			</field>
		</record>
		<!--Long-term assets transactions within schedule window-->
		<record id="combined_statements_inside_asset_deal_window" model="ir.actions.act_window">
			<field name="name">List of internal long-term assets transactions</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">ps.combined.statements.inside.asset.deal</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!--Long-term assets transactions within schedule menu-->
		<menuitem id="combined_statements_inside_asset_deal_menu"
				  name="List of internal long-term assets transactions"
				  parent="combined_statements_merger_inside"
				  action="combined_statements_inside_asset_deal_window"
				  sequence="20" />

	</data>
</odoo>