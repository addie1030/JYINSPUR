<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<record id="combined_statements_version_form" model="ir.ui.view">
			<field name="name">Version</field>
			<field name="model">ps.combined.statements.version</field>
			<field name="arch" type="xml">
				<form>
					<sheet>

						<div class="oe_button_box" name="button_box">
							<button name="toggle_active"
									type="object"
									confirm="(Un)archiving a project automatically (un)archives its tasks and issues. Do you want to proceed?"
									class="oe_stat_button"
									icon="fa-archive">
								<field name="active" widget="boolean_button" options='{"terminology": "archive"}' />
							</button>
						</div>

						<group>
							<field name="code" />
							<field name="name" />
							<!--<field name="company_id" groups="base.group_multi_company" />-->
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="combined_statements_version_tree" model="ir.ui.view">
		    <field name="name">Version</field>
		    <field name="model">ps.combined.statements.version</field>
		    <field name="arch" type="xml">
		        <tree>
					<field name="name" />
					<field name="code" />
					<!--<field name="company_id" groups="base.group_multi_company" />-->
		        </tree>
		    </field>
		</record>

		<record id="combined_statements_version_search" model="ir.ui.view">
			<field name="name">Version</field>
			<field name="model">ps.combined.statements.version</field>
			<field name="arch" type="xml">
				<search>
					<field name="name" />
					<filter string="Archived" name="no_archive" domain="[('active', '=', False)]" />
					<filter string="Not archived" name="archive" domain="[('active', '=', True)]" />
				</search>
			</field>
		</record>

		<record id="combined_statements_version_act_window" model="ir.actions.act_window">
		    <field name="name">Version</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">ps.combined.statements.version</field>
			<field name="search_view_id" ref="combined_statements_version_search" />
		    <field name="view_mode">tree,form</field>
		</record>

		<!-- The report version management  -->
		<!--<menuitem id="combined_statements_version_menu"-->
				  <!--name="Report version management"-->
				  <!--parent="combined_statements_report_style_definition"-->
				  <!--action="combined_statements_version_act_window" />-->
    </data>
</odoo>