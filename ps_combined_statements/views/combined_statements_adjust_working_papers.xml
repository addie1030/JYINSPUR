<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!--Adjust the working papers tree-->
		<record id="combined_statements_adjust_working_paper_project_tree" model="ir.ui.view">
			<field name="name">ps.combined.statements.adjust.working.paper.project.tree</field>
			<field name="model">ps.combined.statements.adjust.working.paper.project</field>
			<field name="arch" type="xml">
				<tree create="false" import="false">
					<field name="project_id" />
					<field name="organization_id" />
					<field name="period" />
					<field name="adj_workingpaper_ids" />
					<!--<field name="company_id" />-->
				</tree>
			</field>
		</record>
		<!--Adjust the working papers window-->
		<record id="combined_statements_adjust_working_paper_project_act_window" model="ir.actions.act_window">
			<field name="name">Adjusting Work Manuscript Query</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">ps.combined.statements.adjust.working.paper.project</field>
			<field name="view_mode">tree</field>
		</record>

		<!-- Adjust the working papers menu -->
		<menuitem id="combined_statements_adjust_working_paper_project_menu"
				  name="Adjusting Work Manuscript Query"
				  parent="combined_statements_merger_related_search"
				  action="combined_statements_adjust_working_paper_project_act_window"
				  sequence="4" />
	</data>
</odoo>