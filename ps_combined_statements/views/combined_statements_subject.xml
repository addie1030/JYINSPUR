<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<record id="combined_statements_subject_form" model="ir.ui.view">
			<field name="name">Consolidation project</field>
			<field name="model">ps.combined.statements.merged.subject</field>
			<field name="arch" type="xml">
				<form>
					<sheet>

						<div class="oe_button_box" name="button_box">
							<button name="toggle_active"
									type="object"
									confirm="(Un)archiving a project automatically (un)archives its tasks and issues. Do you want to proceed?"
									class="oe_stat_button"
									icon="fa-archive">
								<field name="active" widget="boolean_button" options='{"terminology": "archive"}' />
							</button>
						</div>

						<group>
							<group>
								<field name="name" />
							</group>
							<group>
								<field name="code" />
							</group>
						</group>
						<group>
							<!--<field name="company_id" groups="base.group_multi_company"/>-->
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="combined_statements_subject_tree" model="ir.ui.view">
		    <field name="name">Consolidation project</field>
		    <field name="model">ps.combined.statements.merged.subject</field>
		    <field name="arch" type="xml">
		        <tree>
		            <field name="name"/>
					<field name="code" />
					<!--<field name="company_id" groups="base.group_multi_company" />-->
				</tree>
		    </field>
		</record>

		<record id="combined_statements_subject_act_window" model="ir.actions.act_window">
		    <field name="name">Consolidation project</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">ps.combined.statements.merged.subject</field>
		    <field name="view_mode">tree,form</field>
		    <field name="help" type="html">
		      <p class="oe_view_nocontent_create">
				  You can define merged subject here.
		      </p>
		    </field>
		</record>

		<!-- This Menu Item must have a parent and an action -->
		<menuitem id="combined_statements_subject"
				  name="Consolidated subject definitions"
				  parent="combined_statements_report_style_definition"
				  action="combined_statements_subject_act_window"
				  sequence="20"/>
    </data>
</odoo>