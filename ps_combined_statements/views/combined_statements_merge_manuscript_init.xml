<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<!--Working paper defined tree-->
		<record id="merge_manuscript_init_tree" model="ir.ui.view">
		    <field name="name">merge manuscript init tree</field>
		    <field name="model">ps.merge.manuscript.init</field>
		    <field name="arch" type="xml">
		        <tree string="">
					<field name="code" />
					<field name="project_id"/>
					<field name="journaling_id"/>
		            <!--<field name="company_id"/>-->
		        </tree>
		    </field>
		</record>

		<!--Working paper defined form-->
		<record id="merge_manuscript_init_form" model="ir.ui.view">
			<field name="name">merge manuscript init form</field>
			<field name="model">ps.merge.manuscript.init</field>
			<field name="arch" type="xml">
				<form string="">
					<header>
						<button name="set_initial_value" string="Setting initial values" type="object" class="btn-primary"/>
					</header>
					<sheet>
						<div class="oe_button_box" name="button_box">
							<button name="toggle_active"
									type="object"
									confirm="(Un)archiving a project automatically (un)archives its tasks and issues. Do you want to proceed?"
									class="oe_stat_button"
									icon="fa-archive">
								<field name="active" widget="boolean_button" options='{"terminology": "archive"}' />
							</button>
						</div>
						<div class="oe_title">
							<label for="code" string="number" class="oe_edit_only" />
							<h2>
								<field name="code" />
							</h2>
						</div>
						<group>
							<group>
								<field name="project_id" options='{"no_open": True, "no_create": True}'/>
								<!--<field name="company_id" options='{"no_open": True, "no_create": True}' groups="base.group_multi_company" />-->
							</group>
							<group>
								<field name="journaling_id" options='{"no_open": True, "no_create": True}'/>

								<field name="line_project_id" options='{"no_open": True, "no_create": True}'/>

								<field name="balance_dirextin"/>

							</group>
						</group>
						<notebook>
						    <page string="Report item">
						        <group>
						            <field name="init_line_ids" nolabel="1">
										<tree string="Registration" default_order="sequence" editable="top" create="false" delete="false">
											<field name="sequence" widget="handle"/>
											<field name="cell_id" options='{"no_open": True, "no_create": True}'/>
											<field name="line_project_id" options='{"no_open": True, "no_create": True}'/>
											<field name="balance_dirextin"/>
											<field name="merge_subject" options='{"no_open": True, "no_create": True}'/>
											<field name="formula" />
										</tree>
									</field>
						        </group>
						    </page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<!--Working paper defined window-->
		<record id="merge_manuscript_init_window" model="ir.actions.act_window">
		    <field name="name">Definition of working papers</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">ps.merge.manuscript.init</field>
		    <field name="view_mode">tree,form</field>
		</record>

		<!-- Working paper defined  -->
		<menuitem id="merge_manuscript_init_menu"
				  name="Definition of working papers"
				  parent="combined_statements_report_style_definition"
				  action="merge_manuscript_init_window"
				  sequence="30"/>

    </data>
</odoo>