<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="jyinspur.list">
      <field name="name">jyinspur list</field>
      <field name="model">jyinspur.test</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>
    

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="jyinspur.action_window">
      <field name="name">jyinspur window</field>
      <field name="res_model">jyinspur.test</field>
      <field name="view_mode">tree,form</field>
    </record>
    

    <!-- server action to the one above -->
    
    <record model="ir.actions.server" id="jyinspur.action_server">
      <field name="name">jysinpur server</field>
      <field name="model_id" ref="model_jyinspur_test"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    

    <!-- Top menu item -->
    
    <menuitem name="test" id="jysinpur.menu_root"/>
    
    <!-- menu categories -->
    
    <menuitem name="Menu 1" id="jyinspur.menu_1" parent="jyinspur.menu_root"/>
    <menuitem name="Menu 2" id="jyinspur.menu_2" parent="jyinspur.menu_root"/>
    
    <!-- actions -->
    
    <menuitem name="List" id="jyinspur.menu_1_list" parent="jyinspur.menu_1"
              action="jyinspur.action_window"/>
    <menuitem name="Server to list" id="jyinspur" parent="jyinspur.menu_2"
              action="jyinspur.action_server"/>
    
  </data>
</odoo>