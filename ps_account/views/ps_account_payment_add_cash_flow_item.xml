<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_add_cash_flow_item_view_form" model="ir.ui.view">
        <field name="name">payment.add.cash.flow.item</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="journal_type" invisible="1"/>
                <field name="cash_flow_item"
                       attrs="{'invisible': ['|',('payment_type', '=', 'transfer'),('journal_type', '!=', 'cash')],
                       'readonly': [('state', '!=', 'draft')]}"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>
        </field>
    </record>

     <record id="payment_add_cash_flow_item_view_form1" model="ir.ui.view">
        <field name="name">payment.add.cash.flow.item1</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="journal_type" invisible="1"/>
                <field name="cash_flow_item"
                       attrs="{'invisible': ['|',('payment_type', '=', 'transfer'),('journal_type', '!=', 'cash')],
                       'readonly': [('state', '!=', 'draft')]}"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>
        </field>
    </record>
</odoo>
