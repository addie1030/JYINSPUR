        <record id="ps_account_adjust_exchange_rate_form" model="ir.ui.view">
            <field name="name">ps.account.adjust.exchange.rate.from</field>
            <field name="model">ps.adjustment.exchange.rate</field>
            <field name="arch" type="xml">
                <form edit="false" create="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="accounting_period"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="adjust_date"/>
                            </group>
                            <group>
                                <field name="accounting_foreign_currency" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Foreign Currency">
                                <field name="currency_fixed_rate_ids" widget="one2many_list">
                                    <tree string="" delete="false" create="false" editable="true" >
                                        <field name="currency_id"/>
                                        <field name="fixed_rate" readonly="1"/>
                                        <!--<field name="currency_id" readonly="1"/>-->
                                        <field name="exchange_rate"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="post" class="oe_highlight" string="Generate credentials" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="act_ps_account_adjust_exchange_rate" model="ir.actions.act_window">
            <field name="name">Adjusting Exchange Rate</field>
            <field name="res_model">ps.adjustment.exchange.rate</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="ps_account_adjust_exchange_rate_menu"
          name="Exchange Rate Adjustment"
          parent="ps_account.menu_accounting_month_end"
          sequence="14"
          action="act_ps_account_adjust_exchange_rate"
          groups="account.group_account_manager"/>

    </data>
</odoo>