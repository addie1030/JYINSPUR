<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--这里定义主菜单-->
    <menuitem id="menu_accounting_cashier"
              name="Cashier"
              parent="account_accountant.menu_accounting"
              sequence="6"
              groups="account.group_account_manager"/>
    <menuitem id="menu_accounting_asset"
              name="Fixed Assets"
              parent="account_accountant.menu_accounting"
              sequence="7"
              groups="account.group_account_manager"
    />
    <menuitem id="menu_accounting_month_end"
              name="Month-end Processing"
              parent="account_accountant.menu_accounting"
              sequence="10"
              groups="account.group_account_manager"/>
    <menuitem id="menu_ps_finance_statement"
              name="Financial Statements"
              parent="account_accountant.menu_accounting"
              sequence="11"
              groups="account.group_account_manager"/>
    <menuitem id="menu_ps_finance_query"
              name="Statements Query"
              parent="account_accountant.menu_accounting"
              sequence="12"
              groups="account.group_account_manager"/>
    <menuitem id="menu_ps_move_patch_handle"
              name="Volume Setting"
              parent="account.menu_finance_entries"
              sequence="13"
              groups="account.group_account_manager"
    />

    <menuitem id="menu_ps_account_statement_new"
              name="Financial Statements"
              parent="account_accountant.menu_accounting"
              sequence="11"
              groups="account.group_account_manager"/>

    <!--隐藏掉Sales、Purchase后将主数据放到设置中-->
    <record id="product_product_action" model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_type">form</field>
        <field name="context"></field>
        <field name="view_id" ref="account.product_product_view_tree"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new product
            </p><p>
        </p>
        </field>
    </record>
    <record id="action_partner_form" model="ir.actions.act_window">
        <field name="name">Exchange Unit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'default_company_type': 'company','default_is_company': 1}</field>
        <field name="filter" eval="True"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new exchange unit
            </p><p>
        </p>
        </field>
    </record>
    <menuitem id="menu_ps_master_data"
              name="Main Data"
              parent="account.menu_finance_configuration"
              sequence="3"
              groups="account.group_account_manager"
    />
    <menuitem id="menu_ps_account_customer" name="Exchange Unit"
              parent="menu_ps_master_data"
              action="action_partner_form"
              sequence="100"
              groups="account.group_account_manager"
    />
    <menuitem id="menu_ps_seallable_product"
              name="Product Dictionary"
              action="product_product_action"
              parent="menu_ps_master_data"
              sequence="100"
              groups="account.group_account_manager"
    />

    <record id="account.menu_finance_entries" model="ir.ui.menu">
        <field name="groups_id" eval="[(3, ref('account.group_account_user')), (4, ref('account.group_account_manager'))]"/>
    </record>

    <record id="account.menu_finance_configuration" model="ir.ui.menu">
        <field name="groups_id" eval="[(3, ref('account.group_account_manager')), (4, ref('account.group_account_user'))]"/>
    </record>

    <record id="account.menu_finance_reports" model="ir.ui.menu">
        <field name="groups_id" eval="[(3, ref('account.group_account_manager')), (4, ref('account.group_account_user'))]"/>
    </record>
</odoo>

