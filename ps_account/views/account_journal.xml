<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add new field to existing view -->
    <record id="account_journal_form_view" model="ir.ui.view">
        <field name="name">account.journal.form</field>
        <field name="model">account.journal</field>

        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="ps_voucher_word" />
                <field name="ps_voucher_name" />
            </xpath>
            <notebook position="inside">
                <page string="Subject control">
                    <group>
                        <group>
                            <field name="ps_control_style" widget="selection"/>
                        </group>
                        <group>
                            <field name="ps_control_account_ids" widget="many2many_tags" options="{'no_create': True}"
                                   attrs="{'required': ['|',('ps_control_style', '=', '1'),'|',('ps_control_style', '=', '2'),'|',('ps_control_style', '=', '3'),'|',
                            ('ps_control_style', '=', '4'),'|',('ps_control_style', '=', '5'),'|',('ps_control_style', '=', '6')]}"/>
                        </group>
                    </group>
                </page>
            </notebook>

        </field>
    </record>
    <record id="account.action_account_journal_form" model="ir.actions.act_window">
        <field name="context">{'check_account_validate': True}</field>
    </record>
</odoo>