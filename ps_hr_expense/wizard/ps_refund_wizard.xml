<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="ps_return_amount_from" model="ir.ui.view">
            <field name="name">Return Amount Form</field>
            <field name="model">ps.returned.amount</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="amount_return_theoretical"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="amount_return_actual"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="confirm_refund" string="退款付款" class="oe_highlight" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>