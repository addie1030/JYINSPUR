<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="ps_loan_analysis_pivot" model="ir.ui.view">
            <field name="name">ps.loan.analysis.pivot</field>
            <field name="model">ps.hr.expense.request</field>
            <field name="arch" type="xml">
                <pivot string="Loan Analysis" disable_linking="True">
                    <field name="employee_id" type="row"/>
                    <field name="department_id"/>
                    <field name="amount_loan"/>
                    <field name="amount_return_theoretical"/>
                    <field name="date_return" interval="year"/>
                </pivot>
            </field>
        </record>

        <record id="view_ps_loan_analysis_search" model="ir.ui.view">
            <field name="name">loan.analysis.search</field>
            <field name="model">ps.hr.expense.request</field>
            <field name="arch" type="xml">
                <search string="Loan Analysis">
                    <field name="employee_id"/>
                    <filter name="employee_id" string="Employee" context="{'group_by':'employee_id'}"/>
                    <separator/>
                    <field name="department_id"/>
                    <filter name="department_id" string="Department" context="{'group_by':'department_id'}"/>
                    <separator/>
                    <field name="date_return"/>
                    <filter name="date_return" string="Retrun Date" context="{'group_by':'date_return'}"/>
                </search>
            </field>
        </record>

        <record id="act_ps_loan_analysis_pivot" model="ir.actions.act_window">
            <field name="name">Loan Analysis</field>
            <field name="res_model">ps.hr.expense.request</field>
            <field name="view_mode">pivot</field>
            <field name="view_id" ref="ps_loan_analysis_pivot"/>
            <field name="search_view_id" ref="view_ps_loan_analysis_search"/>
            <!--<field name="search_view_id" ref="report_all_channels_sales_view_search"/>-->
            <!--<field name="context">{'search_default_team_id': 1, 'search_default_current_year': 1}</field>-->
        </record>

        <menuitem id="ps_loan_analysis_menu"
                  action="act_ps_loan_analysis_pivot"
                  name="Loan Analysis"
                  parent="hr_expense.menu_hr_expense_reports"
                  groups="account.group_account_manager"
                  sequence="3"/>
    </data>
</odoo>