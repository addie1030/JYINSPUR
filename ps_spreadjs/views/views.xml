<odoo>
    <data>
        <record id="view_statement_statements_tree" model="ir.ui.view">
            <field name="name">财务报表</field>
            <field name="model">ps.statement.statements</field>
            <field name="arch" type="xml">
                <tree string="财务报表" default_order="report_date,report_code">
                    <field name="report_code" string="报表编号" />
                    <field name="report_date" string="报表日期"/>
                    <field name="report_name" string="报表名称"/>
                    <field name="category" string="编报时间"/>
                    <field name="title_rows" string="标题行数" invisible="1"/>
                    <field name="head_rows" string="表头行数" invisible="1"/>
                    <field name="body_rows" string="表体行数" invisible="1"/>
                    <field name="tail_rows" string="表尾行数" invisible="1"/>
                    <field name="total_rows" string="总行数" invisible="1"/>
                    <field name="total_cols" string="总列数" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_statement_columns_tree" model="ir.ui.view">
            <field name="name">财务报表列字典</field>
            <field name="model">ps.statement.sheet.columns</field>
            <field name="arch" type="xml">
                <tree string="财务报表列字典">
                    <field name="report_code" string="报表编号" />
                    <field name="report_date" string="报表日期"/>
                    <field name="col_order" string="列序号" invisible="1"/>
                    <field name="col_coordinate" string="列坐标"/>
                    <field name="col_name" string="列名称"/>
                    <field name="col_isnumber" string="数值列" invisible="1"/>
                    <field name="col_isamount" string="汇总列" invisible="1"/>
                    <field name="col_isadjust" string="调整列" invisible="1"/>
                    <field name="col_isitem" string="项目列" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_statement_formulas_tree" model="ir.ui.view">
            <field name="name">自定义公式</field>
            <field name="model">ps.statement.formulas</field>
            <field name="arch" type="xml">
                <tree string="自定义公式">
                    <field name="name" string="公式名称"/>
                    <field name="formula_summary" string="公式描述"/>
                    <field name="formula_object" string="取数对象" attrs="{'invisible':[('formula_type','=','1')]}"/>
                    <field name="formula_type" string="公式类型"/>
                    <field name="formula_scope" string="作用范围"/>
                    <field name="formula_note" string="备注"/>
                </tree>
            </field>
        </record>

        <record id="view_statement_formulas_form" model="ir.ui.view">
            <field name="name">自定义公式</field>
            <field name="model">ps.statement.formulas</field>
            <field name="arch" type="html">
                <form>
                    <header>
                        <button id="aaaa" name="create_params" string="生成公式参数" help="生成公式参数" attrs="{'invisible':[('formula_type','=','0')]}" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" string="公式名称" attrs="{'readonly': [('formula_type','=','0')]}"/>
                            <field name="formula_summary" string="公式描述" attrs="{'readonly': [('formula_type','=','0')]}"/>
                            <field name="formula_object" string="取数对象" attrs="{'invisible':[('formula_type','=','1')],'readonly': [('formula_type','=','0')]}"/>
                            <field name="formula_design" string="公式模型" placeholder="取数SQL，使用双#号定义参数，例如，#ACCOUNT#" attrs="{'readonly': [('formula_type','=','0')]}"/>
                            <field name="formula_type" string="公式类型" attrs="{'readonly': [('formula_type','=','0')]}"/>
                            <field name="formula_scope" string="作用范围" attrs="{'readonly': [('formula_type','=','0')]}"/>
                            <field name="formula_note" string="备注" attrs="{'readonly': [('formula_type','=','0')]}"/>
                            <field name="formula_params_ids" string="公式参数" attrs="{'readonly': [('formula_type','=','0')]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_statement_formulas_params_tree" model="ir.ui.view">
            <field name="name">自定义公式参数</field>
            <field name="model">ps.statement.formula.params</field>
            <field name="arch" type="xml">
                <tree string="自定义公式参数" default_order="param_id">
                    <!--<field name="formula_id" string="公式编号"/>-->
                    <field name="param_id" string="参数序号"/>
                    <field name="name" string="参数名称"/>
                    <field name="param_description" string="参数描述"/>
                    <field name="param_category" string="来源方式"/>
                    <field name="param_type" string="参数类型"/>
                    <field name="param_value" string="参数内容" attrs="{'invisible':[('param_category','=','2')]}"/>
                    <field name="param_sysvar" string="参数内容" attrs="{'invisible':[('param_category','!=','2')]}"/>
                    <field name="param_note" string="备注"/>
                </tree>
            </field>
        </record>

        <record id="view_statement_formulas_params_form" model="ir.ui.view">
            <field name="name">自定义公式参数</field>
            <field name="model">ps.statement.formula.params</field>
            <field name="arch" type="html">
                <form>
                    <sheet>
                        <group>
                            <!--<field name="formula_id" string="公式编号"/>-->
                            <field name="param_id" string="参数序号"/>
                            <field name="name" string="参数名称"/>
                            <field name="param_description" string="参数描述"/>
                            <field name="param_category" string="来源方式"/>
                            <field name="param_type" string="参数类型"/>
                            <field name="param_value" string="参数内容" attrs="{'invisible':[('param_category','=','2')]}"/>
                            <field name="param_sysvar" string="参数内容" attrs="{'invisible':[('param_category','!=','2')]}"/>
                            <field name="param_note" string="备注"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_statement_pivot_tree" model="ir.ui.view">
            <field name="name">数据透视表</field>
            <field name="model">ps.statement.pivot</field>
            <field name="arch" type="xml">
                <tree string="数据透视表">
                    <field name="report_code" string="报表编号"/>
                    <field name="code" string="透视编号"/>
                    <field name="name" string="透视名称"/>
                </tree>
            </field>
        </record>

        <record id="view_statement_pivot_form" model="ir.ui.view">
            <field name="name">数据透视表</field>
            <field name="model">ps.statement.pivot</field>
            <field name="arch" type="html">
                <form>
                    <header>
                        <button id="create_details" name="create_details" string="生成透视明细" help="生成透视明细" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="report_code" string="报表编号" options="{'no_create': True}" attrs="{'readonly': True}"/>
                            <field name="code" string="透视编号" placeholder="编号为两位字符"/>
                            <field name="name" string="透视名称"/>
                            <field name="pivot_details_ids" string="透视明细"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_statement_pivot_details_tree" model="ir.ui.view">
            <field name="name">数据透视定义</field>
