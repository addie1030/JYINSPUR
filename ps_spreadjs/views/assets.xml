<?xml version="1.1" encoding="utf-8"?>
<odoo>
   <template id="statement_assets_backend" name="statement_assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/ps_spreadjs/static/src/js/statements.js"></script>
            <script type="text/javascript" src="/ps_spreadjs/static/src/js/statements_pivot.js"></script>
			<script type="text/javascript" src="/ps_spreadjs/static/src/js/FileSaver.js" ></script>
            <script type="text/javascript" src="/ps_spreadjs/static/src/js/gcspread.sheets.all.9.40.20161.0.min.js"></script>
            <script type="text/javascript" src="/ps_spreadjs/static/src/js/gcspread.sheets.core.9.40.20161.0.min.js"></script>
            <script type="text/javascript" src="/ps_spreadjs/static/src/js/gcspread.sheets.print.9.40.20161.0.min.js" ></script>
			<script type="text/javascript" src="/ps_spreadjs/static/src/js/gcspread.sheets.formulatextbox.9.40.20161.0.min.js" ></script>
            <link rel="stylesheet" href="/ps_spreadjs/static/src/css/gcspread.sheets.9.40.20161.0.css"/>
			<link rel="stylesheet" href="/ps_spreadjs/static/src/css/gcspread.sheets.excel2016colorful.9.40.20161.0.css"/>
            <script type="text/javascript" src="/ps_spreadjs/static/src/js/formula_define.js"></script>
            <link rel="stylesheet" href="/ps_spreadjs/static/src/css/formula_define.css"/>
        </xpath>
    </template>
    <template id="statement_assets_common" name="statement_assets_common" inherit_id="web.assets_common">
        <xpath expr="//script[contains(@src, '/web/static/lib/jquery.ui/jquery-ui.js')]" position="replace">
            <script type="text/javascript" src="/ps_spreadjs/static/src/js/jquery-ui.min.js"></script>
            <!--报表模块用到了jquery内的dialog方法，Odoo原有的jquery不包含此方法，这里通过替换文件的方式进行更新，同时已验证在debug模式下还可以查看字段详情。-->
        </xpath>
        <xpath expr="//link[contains(@href, '/web/static/lib/jquery.ui/jquery-ui.css')]" position="replace">
            <link rel="stylesheet" type="text/css" href="/ps_spreadjs/static/src/css/jquery-ui.min.css"/>
        </xpath>
    </template>
</odoo>
