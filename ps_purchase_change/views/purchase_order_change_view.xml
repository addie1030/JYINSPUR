<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--tree view-->
    <record id="ps_purchase_order_change_tree" model="ir.ui.view">
        <field name="name">purchase.order.change.tree</field>
        <field name="model">ps.purchase.order.change</field>
        <field name="arch" type="xml">
            <tree string="Purchase Order Change">
                <field name="name"/>
                <field name="date" />
                <field name="partner_id"/>
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                <field name="change_reason"/>
                <field name="user_id"/>
                <field name="order_id"/>
                <field name="partner_ref"/>
                <field name="currency_id" invisible="1"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>
    <!--form view-->
    <record id="ps_purchase_order_change_form" model="ir.ui.view">
        <field name="name">purchase.order.change.form</field>
        <field name="model">ps.purchase.order.change</field>
        <field name="arch" type="xml">
            <form string="Purchase Order Change">
            <header>
                <button name="button_confirm" type="object" states="draft" string="Confirm Order"
                        class="oe_highlight" id="ps_order_change_draft_confirm" groups="purchase.group_purchase_manager"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirmed" readonly="1"/>
            </header>
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="order_id" domain="[('state','=','done'),('invoice_count','=','0')]"
                               options="{'no_create': True}" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                        <field name="partner_id" domain="[('supplier','=',True)]" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                        <field name="partner_ref" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                        <field name="currency_id" groups="base.group_multi_currency" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                    </group>
                    <group>
                        <field name="date" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                        <field name="change_date" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                        <field name="user_id" attrs="{'readonly': [('state', '=', 'confirmed')]}" />
                        <field name="change_reason" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" attrs="{'readonly': [('state', '=', 'confirmed')]}"/>
                    </group>
                </group>
                <notebook>
                    <page string="Products">
                        <field name="change_line_ids" attrs="{'readonly': [('state', '=', 'confirmed')]}" widget="one2many_list">
                             <tree string="Purchase Change Order Lines" editable="bottom" create="0">
                                <field name="currency_id" invisible="1"/>
                                <field name="order_line_id" invisible="1" force_save="1"/>
                                <field name="state" invisible="1"/>
                                <field name="sequence" widget="handle"/>
                                <field name="product_id" readonly="1" options="{'no_create': True}" context="{'partner_id':parent.partner_id, 'quantity':product_qty,'uom':product_uom, 'company_id': parent.company_id}" force_save="1"/>
                                <field name="name"/>
                                <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                                <field name="pre_product_qty" readonly="1" force_save="1"/>
                                <field name="product_qty"/>
                                <field name="qty_received" invisible="not context.get('show_purchase', True)"/>
                                <field name="qty_invoiced" invisible="not context.get('show_purchase', True)"/>
                                <field name="product_uom" groups="uom.group_uom" readonly="1" force_save="1"/>
                                <field name="pre_price_unit" readonly="1" force_save="1"/>
                                <field name="price_unit"/>
                                <field name="product_uom" readonly="1"/>
                                <field name="taxes_id" widget="many2many_tags"
                                       options="{'no_create': True, 'no_open': True}"/>
                                <field name="price_subtotal" widget="monetary"/>
                            </tree>
                        </field>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="amount_untaxed" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="amount_tax" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <div class="oe_subtotal_footer_separator oe_inline">
                                <label for="amount_total"/>
                            </div>
                            <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <div class="oe_clear"/>
                    </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>
    <!--search view-->
    <record id="view_ps_purchase_change_order_search" model="ir.ui.view">
        <field name="name">ps.purchase.change.order.search</field>
        <field name="model">ps.purchase.order.change</field>
        <field name="arch" type="xml">
            <search string="Order Change Lists">
                <filter name="draft" string="Draft" domain="[('state','=','draft')]" help="Draft Change Orders"/>
                <filter name="confirmed" string="Confirmed" domain="[('state','=', 'confirmed')]" help="Confirmed Change Orders"/>
                <field name="partner_id" filter_domain="[('partner_id','child_of',self)]"/>
                <group expand="0" string="Group By">
                    <filter name="Status" domain="[]" context="{'group_by':'state'}"/>
                    <filter name="Order Date" domain="[]"  context="{'group_by':'date'}"/>
                    <filter name="Change Date" domain="[]"  context="{'group_by':'change_date'}"/>
                    <filter name="Origin Order" domain="[]" context="{'group_by':'order_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <!--action-->
    <record id="ps_purchase_order_change_action_display_tree" model="ir.actions.act_window">
        <field name="name">Purchase Change Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ps.purchase.order.change</field>
        <field name="view_mode">tree,form</field>
        <field name="context" eval="{'search_default_draft': 1}"/>
        <field name="search_view_id" ref="view_ps_purchase_change_order_search"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Click to create a purchase change order.
          </p>
        </field>
    </record>
    <!--add menuitem-->
    <menuitem id="menu_ps_purchase_order_change_action_display_tree"
              action="ps_purchase_order_change_action_display_tree"
              parent="purchase.menu_procurement_management"
              sequence="7"/>
</odoo>
