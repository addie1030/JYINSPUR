<?xml version="1.1" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="ps_auth_oauth.providers" name="PS OAuth Providers">
            <div t-foreach="providers" t-as="p">
                <div class="clearfix oe_login_buttons" style="margin-top:5px;">
                    <a t-att-href="p['auth_link']" class="btn btn-primary pull-left" style="border-color:#CCCCCC; background-color:#FFFFFF; color:#ED6D00; position: relative; overflow: hidden; width: 100%">
                        <t t-esc="p['body']"/>
                    </a>
                </div>
            </div>
        </template>
        <template id="ps_auth_oauth.login" inherit_id="web.login" >
            <!--<xpath expr="//div[@class='pull-right']" position="replace">-->
                <!--&lt;!&ndash;<div></div>&ndash;&gt;-->
            <!--</xpath>-->
            <xpath expr="//button[@type='submit']" position="after">
                <div>
                    <t t-call="ps_auth_oauth.providers"/>
                </div>
            </xpath>
        </template>
    </data>
</odoo>