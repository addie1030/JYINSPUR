<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ps_synergism_view_account_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="ps_account.view_move_form_new"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before" >
                    <button name="mark_account_move_insider_dealing"
                            states="posted" string="Marking internal transactions"
                            type="object"
                            context="{'ps_move_id':id}"
                            groups="account.group_account_manager"/>
                    <button name="cancel_insider_dealing_account_move"
                            states="posted" string="Cancellation of internal transactions"
                            type="object"
                            context="{'ps_trade_no':ps_trade_no}"
                            groups="account.group_account_manager"/>
                </xpath>
                <xpath expr="//field[@name='ps_attachcount']" position="after" >
					<field name="ps_way" />
					<field name="ps_type_id" attrs="{ 'readonly': [('ps_way', '=', 'receive')], 'invisible': [('ps_way', '=', False)]}" />
                    <field name="ps_trade_id" attrs="{'invisible': ['|',('ps_way', '=', 'send'),('ps_way', '=', False)]}" options='{"no_open": True, "no_create": True}'/>
                    <field name="ps_trade_no" attrs="{'readonly': [('ps_way', 'in', ['receive','send'])],'invisible': [('ps_way', '=', False)]}" />
                    <!--<field name="ps_des_company_id" attrs="{'readonly': [('ps_way', '=', 'receive')],'invisible': [('ps_way', '=', False)]}"/>-->
                    <field name="ps_partner_id" attrs="{'readonly': [('ps_way', '=', 'receive')],'invisible': [('ps_way', '=', False)]}"/>
                    <field name="ps_boolean_inside" invisible="1"/>
                    <field name="ps_mark" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="view_ps_account_move_trade_tree" model="ir.ui.view">
            <field name="name">ps.account.move.trade.tree</field>
            <field name="model">ps.account.move.trade</field>
            <field name="arch" type="xml">
                <tree string="Internal Transaction Records">
                    <field name="des_company_id"/>
                    <field name="type_id"/>
                    <field name="trade_no"/>
                    <field name="src_company_id"/>
                    <field name="state"/>
                    <field name="origin"/>
                </tree>
            </field>
        </record>

        <record id="action_view_ps_account_move_trade_tree" model="ir.actions.act_window">
            <field name="name">ps.account.move.trade.act</field>
            <field name="res_model">ps.account.move.trade</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="target">current</field>
            <field name="view_id" ref="view_ps_account_move_trade_tree"/>
        </record>

        <menuitem
            action="action_view_ps_account_move_trade_tree"
            id="menu_action_ps_account_move_trade_tree"
            name="Internal Transaction Records"
            parent="account.menu_finance_entries"
            groups="account.group_account_user"
            sequence="3"/>

    </data>
</odoo>