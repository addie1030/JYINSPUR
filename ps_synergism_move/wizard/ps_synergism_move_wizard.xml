<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ps_cancle_move_trade_view" model="ir.ui.view">
            <field name="name">ps.cancle.move.trade.form</field>
            <field name="model">ps.cancle.move.trade.wizard</field>
            <field name="arch" type="xml">
                <form string="Post Journal Entries">
                    <p>Are you sure you want to cancel this internal transaction?</p>
                    <footer>
                        <button string="confirm" name="cancel_move_trade" type="object" default_focus="1" class="btn-primary"/>
                        <button string="cancle" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="ps_mark_move_trade_view" model="ir.ui.view">
            <field name="name">ps.mark.move.trade.form</field>
            <field name="model">ps.mark.move.trade.wizard</field>
            <field name="arch" type="xml">
                <form string="Post Journal Entries">
                    <p>Are you sure you want to confirm this internal transaction??</p>
                    <footer>
                        <button string="confirm" name="mark_move_trade" type="object" default_focus="1" class="btn-primary"/>
                        <button string="cancle" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>