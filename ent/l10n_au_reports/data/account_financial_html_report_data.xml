        <field name="financial_report_id" ref="account_financial_report_l10n_au_gstrpt"/>
        <field name="level" eval="3" />
        <field name="domain" eval="['|',
        ('tax_ids.tag_ids', 'in', [ref('l10n_au.tag_au_tax_purchase_input')]),
