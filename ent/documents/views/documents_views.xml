<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- settings -->

    <record id="documents_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context" eval="{'module': 'general_settings'}"/>
    </record>

    <!-- attachments -->

    <record id="documents_view_search_inherit" model="ir.ui.view">
        <field name="name">attachment search view</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='binary_filter']" position="after">
                <filter name="requested_filter" string="Requested files" domain="[('type', '=', 'empty')]"/>
            </xpath>
            <xpath expr="//search" position="inside">
                <field name="datas_fname"/>
                <field name="tag_ids"/>
                <field name="index_content"/>
                <field name="owner_id"/>
                <field name="partner_id" string="Contact"/>
                <separator/>
                <filter string="My Activities" name="activities_my"
                        domain="[('activity_ids.user_id', '=', uid)]"/>
                <separator/>
                <filter string="Late Activities" name="activities_overdue"
                    domain="[('activity_ids.date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]"
                    help="Show all records which has next action date is before today"/>
                <filter string="Today Activities" name="activities_today"
                    domain="[('activity_ids.date_deadline', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Future Activities" name="activities_upcoming_all"
                    domain="[('activity_ids.date_deadline', '&gt;', context_today().strftime('%Y-%m-%d'))
                    ]"/>
                <separator/>
                <filter string="PDF" name="pdf" domain="[('mimetype', 'ilike', 'pdf')]"/>
                <filter string="Image" name="img" domain="[('mimetype', 'ilike', 'image')]"/>
                <filter string="Video" name="video" domain="[('mimetype', 'ilike', 'video')]"/>
                <filter string="Doc" name="doc" domain="[('datas_fname', 'ilike', '.doc')]"/>
                <separator/>
                <filter string="Archived" name="Inactive" domain="[('active', '=', False)]"/>
                <filter string="Model" name="by_model" domain="[]" context="{'group_by': 'res_model'}"/>
            </xpath>
            <xpath expr="//filter[@name='my_documents_filter']" position="replace">
                <filter name="my_documents_filter" string="My Documents" domain="[('owner_id', '=', uid)]"/>
                <filter name="my_favorites_filter" string="My Favorites" domain="[('favorited_ids', 'in', uid)]"/>
                <separator/>
                <filter name="my_locked_filter" string="My locked files" domain="[('lock_uid', '=', uid)]"/>
                <filter name="all_locked_filter" string="All locked files" domain="[('lock_uid', '!=', False)]"/>
                <separator/>
            </xpath>
            <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="string">Document</attribute>
            </xpath>
        </field>
    </record>

    <record id="inherit_mail_attachment_view_kanban" model="ir.ui.view">
        <field name="name">Attachment Kanban View</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="mail.view_document_file_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('o_kanban_record_title')]" position="replace">
                <div class="o_kanban_record_title">
                    <field name="name" class="o_text_overflow"/>
                </div>
            </xpath>
            <xpath expr="//div[hasclass('o_kanban_record_body')]" position="inside">
                <t t-if="record.type.raw_value === 'empty'">
                    <span><b>Requested Document</b></span>
                </t>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="documents_view_kanban">
        <field name="name">ir.attachment kanban</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <kanban js_class="documents_kanban" create="false">
                <field name="id"/>
                <field name="mimetype"/>
                <field name="favorited_ids"/>
                <field name="owner_id"/>
                <field name="lock_uid"/>
                <field name="type"/>
                <field name="datas_fname"/>
                <field name="create_uid"/>
                <field name="url"/>
                <field name="type"/>
                <field name="create_date"/>
                <field name="active"/>
                <field name="checksum"/>
                <field name="name"/>
                <field name="res_model_name"/>
                <field name="res_name"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <templates>
                    <t t-name="kanban-box">
                        <t t-set="fileRequest" t-value="record.type.raw_value === 'empty'"/>
                        <div t-attf-class="oe_kanban_global_area o_kanban_attachment #{fileRequest ? 'oe_file_request' : ''}">
                            <div t-attf-class="o_kanban_image #{fileRequest ? 'o_request_image' : ''}">
                                <t t-set="webimage"
                                   t-value="new RegExp('image.*(gif|jpeg|jpg|png)').test(record.mimetype.value)"/>
                                <t t-set="binaryPreviewable"
                                   t-value="new RegExp('(image|video|application/pdf|text)').test(record.mimetype.value) &amp;&amp; record.type.raw_value === 'binary'"/>
                                <!-- should be made more generic if we support different websites for videos -->
                                <t t-set="supportedUrlVideo"
                                   t-value="record.url.raw_value.length ? new RegExp('((http(s)?:\/\/)?)(www\.)?((youtube\.com\/)|(youtu.be\/))').test(record.url.raw_value) : false"/>
                                <div t-attf-class="o_kanban_image_wrapper #{(webimage || binaryPreviewable || supportedUrlVideo) ? 'oe_kanban_previewer' : ''}">
                                    <div t-if="supportedUrlVideo" class="o_image o_image_thumbnail" data-mimetype="video"/>
                                    <div t-elif="record.type.raw_value == 'url'" class="o_url_image fa fa-link fa-3x text-muted"/>
                                    <img t-elif="webimage" t-attf-src="/web/image/#{record.id.raw_value}?field=thumbnail&amp;signature=#{record.checksum.value}" width="100" height="100" alt="Document" class="o_attachment_image"/>
                                    <div t-elif="fileRequest" class="fa fa-download fa-3x text-muted"/>
                                    <div t-else="!webimage" class="o_image o_image_thumbnail" t-att-data-mimetype="record.mimetype.value"/>
                                </div>
                            </div>
                            <div class="o_kanban_details">
                                <div class="o_kanban_details_wrapper">
                                    <div t-att-title="record.datas_fname.raw_value" class="o_kanban_record_title">
                                        <field name="name" class="o_text_overflow"/>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <t t-if="record.res_model_name.raw_value">
                                            <strong><field name="res_model_name"/></strong>
                                            <t t-if="record.res_name.raw_value">
                                                <span t-att-title="record.res_name.raw_value">: <field name="res_name"/></span>
                                            </t>
                                        </t>
                                        <t t-if="record.type.raw_value == 'url'">
                                            <span class="o_document_url"><i class="fa fa-globe"/> <field name="url" widget="url"/></span>
                                        </t>
                                        <t t-if="fileRequest">
                                            <span><b>Requested Document</b></span>
                                        </t>
                                        <samp t-else="" class="text-muted"> </samp>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <time class="oe_kanban_bottom_left">
                                            <field name="create_date" widget="date"/>
                                            <i t-attf-class="fa #{(record.lock_uid.raw_value == user_context.uid || !record.lock_uid.raw_value)? '' : ' fa-lock'} #{(record.lock_uid.raw_value == user_context.uid)? ' fa-unlock-alt' : ''}"
                                               t-att-title="record.lock_uid.value"/>
                                        </time>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="activity_ids" widget="kanban_activity"/>
                                            <a type="object" name="toggle_favorited"
                                                t-attf-class="fa fa-lg fa-star#{(record.favorited_ids.raw_value.indexOf(user_context.uid) &lt; 0)? '-o' : ' favorite_sign_button_enabled'} favorite_sign_button"/>
                                            <img t-att-src="kanban_image('res.users', 'image_small', record.owner_id.raw_value)" t-att-data-member_id="record.owner_id.raw_value" t-att-alt="record.owner_id.raw_value" width="32" height="32" class="oe_kanban_avatar"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="documents_view_form" model="ir.ui.view">
        <field name="name">attachments form</field>
        <field name="model">ir.attachment</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="folder_id"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="datas" filename="datas_fname" attrs="{'invisible':[('type','=','url')]}"/>
                            <field name="datas_fname" invisible="1" attrs="{'invisible':[('type','=','url')]}" class="oe_inline oe_right"/>
                            <field name="owner_id"/>
                            <field name="partner_id"/>
                            <field name="file_size" attrs="{ 'invisible' : [('type', '!=', 'binary')]}"/>
                            <field name="type" readonly="1"/>
                            <field name="url" attrs="{ 'invisible' : [('type', '!=', 'url')]}"/>
                        </group>
                        <group>
                            <group attrs="{ 'invisible' : [('thumbnail', '=', False)]}">
                                <field name="thumbnail" nolabel="1" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;:&quot;thumbnail&quot;}"/>
                            </group>
                        </group>
                    </group>
                    <group>
                        <field name="res_model" readonly="1" attrs="{'invisible':[('res_model','=', False)]}"/>
                        <field name="res_model_name" readonly="1" attrs="{ 'invisible' : [('res_model_name', '=', False)]}"/>
                        <field name="create_date" readonly="1"/>
                        <field name="create_uid" readonly="1"/>
                        <field name="company_id" readonly="1"/>
                        <field name="mimetype" readonly="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="documents_upload_url_view" model="ir.ui.view">
        <field name="name">upload url</field>
        <field name="priority" eval="5"/>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="url" string="URL" widget="url" required="1"/>
                        <field name="name"/>
                        <field name="folder_id" invisible="1"/>
                        <field name="tag_ids" invisible="1"/>
                        <field name="type" invisible="1"/>
                        <field name="datas_fname" invisible="1"/>
                    </group>
                <footer>
                    <button name="write" type="object" string="Add" class="btn btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="documents_view_list" model="ir.ui.view">
        <field name="name">attachments list</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <tree class="o_documents_list_view" create="false" edit="false">
                <field name="name"/>
                <field name="res_model"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- folders -->

    <record id="folder_view_search" model="ir.ui.view">
        <field name="name">folder search</field>
        <field name="model">documents.folder</field>
        <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="parent_folder_id"/>
            <filter string="Parent Folder" name="by_parent" domain="[]" context="{'group_by': 'parent_folder_id'}"/>
         </search>
        </field>
    </record>

    <record id="folder_view_tree" model="ir.ui.view">
        <field name="name">folder tree</field>
        <field name="model">documents.folder</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="parent_folder_id"/>
                <field name="create_uid"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="folder_view_form" model="ir.ui.view">
        <field name="name">Folder form</field>
        <field name="model">documents.folder</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="E.g. Finance"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="parent_folder_id"/>
                            <field name="company_id"/>
                            <field name="group_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="facet_ids" context="{'form_view_ref' : 'documents.facet_view_form'}">
                                <tree>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </group>
                        <label for="description"/>
                        <field name="description" widget="html"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- shares links -->

    <record id="share_view_search" model="ir.ui.view">
        <field name="name">share search</field>
        <field name="model">documents.share</field>
        <field name="arch" type="xml">
        <search>
            <field name="name"/>
            <field name="attachment_ids"/>
            <field name="folder_id"/>
            <field name="partner_id"/>
         </search>
        </field>
    </record>

    <record id="share_view_tree" model="ir.ui.view">
        <field name="name">share tree</field>
        <field name="model">documents.share</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="folder_id"/>
                <field name="name"/>
                <field name="type"/>
                <field name="action"/>
                <field name="create_uid"/>
                <field name="create_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="share_view_form" model="ir.ui.view">
        <field name="name">Share form</field>
        <field name="model">documents.share</field>
        <field name="arch" type="xml">
            <form class="o_share_form" create="false">
                <sheet class="o_share_sheet">
                    <field name="full_url" widget="CopyClipboardChar" readonly="1"/>
                    <group>
                        <group>
                        <field name="type" groups="base.group_no_one"/>
                        <field name="name" placeholder="Name of the share link"/>
                        <field name="action" widget="radio" attrs="{'invisible' : [('type', 'in', ['ids'])] }"/>
                        </group>
                        <group>
                            <field name="date_deadline" widget="date"/>
                            <label for="email_drop" attrs="{'invisible' : [('action', 'in', ['download'])] }"/>
                            <div attrs="{'invisible' : [('action', 'in', ['download'])] }">
                                <div class="o_row">
                                <field name="email_drop"/>
                                <div attrs="{'invisible': [('email_drop', '!=', True)]}" class="oe_inline">
                                    <div name="alias_def" attrs="{'invisible': [('alias_domain', '=', False)]}">
                                        <field name="alias_id" class="oe_read_only oe_inline" required="0"/>
                                        <div class="oe_edit_only oe_inline" name="edit_alias" style="display: inline;">
                                            <field name="alias_name" class="oe_inline"/>@<field name="alias_domain" class="oe_inline" readonly="1"/>
                                        </div>
                                    </div>
                                    <div class="content-group" attrs="{'invisible': [('alias_domain', '!=', False)]}">
                                        <a type="action" name='%(documents_settings_action)d' class="btn btn-sm btn-link" role="button"><i class="fa fa-fw o_button_icon fa-arrow-right"/> Configure Email Servers</a>
                                    </div>
                                </div>
                                </div>
                            </div>
                            <field name="folder_id" readonly="1" groups="base.group_no_one" attrs="{'invisible' : [('type', 'in', ['ids'])] }"/>
                            <field name="tag_ids" readonly="1" groups="base.group_no_one" widget="many2many_tags" attrs="{'invisible' : [('type', 'in', ['ids'])] }"/>
                        </group>
                    </group>
                    <group string="Default values for uploaded documents" attrs="{'invisible' : [('action', 'in', ['download'])] }">
                        <group>
                            <field name="owner_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" invisible="1"/>
                            <field name="activity_option"/>
                        </group>
                    </group>
                    <group string="Activity" name="next_activity" autofocus="autofocus" attrs="{'invisible': [('activity_option', '=', False)]}">
                        <group>
                            <field name="activity_type_id" options="{'no_create': True, 'no_open': True}" attrs="{'required': [('activity_option', '=', True)]}"/>
                            <field name="activity_summary" placeholder="e.g. Discuss proposal"/>
                        </group>
                        <group>
                            <label for="activity_date_deadline_range"/>
                            <div class="o_row">
                                <field name="activity_date_deadline_range"/>
                                <field name="activity_date_deadline_range_type"/>
                            </div>
                            <field name="activity_user_id"/>
                        </group>
                        <field name="activity_note" placeholder="Log a note..."/>
                    </group>
                    <field name="attachment_ids" groups="base.group_no_one" readonly="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="share_view_form_popup" model="ir.ui.view">
        <field name="name">Share Document</field>
        <field name="model">documents.share</field>
        <field name="arch" type="xml">
            <form class="o_share_form">
                <sheet class="o_share_sheet">
                    <group class="o_url_group">
                        <field name="full_url" widget="CopyClipboardChar" readonly="1"/>
                    </group>
                    <group>
                        <group>
                        <field name="type" groups="base.group_no_one"/>
                        <field name="name" placeholder="Name of the share link"/>
                        <field name="action" widget="radio" attrs="{'invisible' : [('type', 'in', ['ids'])] }"/>
                        </group>
                        <group>
                            <field name="date_deadline" widget="date"/>
                            <label for="email_drop" attrs="{'invisible' : [('action', 'in', ['download'])] }"/>
                            <div attrs="{'invisible' : [('action', 'in', ['download'])] }">
                                <field name="email_drop" class="oe_inline"/>
                                <div attrs="{'invisible': [('email_drop', '!=', True)]}" class="oe_inline">
                                    <div name="alias_def" attrs="{'invisible': [('alias_domain', '=', False)]}">
                                        <field name="alias_id" class="oe_read_only oe_inline" required="0"/>
                                        <div class="oe_edit_only oe_inline" name="edit_alias" style="display: inline;">
                                            <field name="alias_name" class="oe_inline"/>@<field name="alias_domain" class="oe_inline" readonly="1"/>
                                        </div>
                                    </div>
                                    <div class="content-group" attrs="{'invisible': [('alias_domain', '!=', False)]}">
                                        <a type="action" name='%(documents_settings_action)d' class="btn btn-sm btn-link" role="button"><i class="fa fa-fw o_button_icon fa-arrow-right"/> Configure Email Servers</a>
                                    </div>
                                </div>
                            </div>
                            <field name="folder_id" readonly="1" groups="base.group_no_one" attrs="{'invisible' : [('type', 'in', ['ids'])] }"/>
                        </group>
                    </group>
                    <group string="Default values for uploaded documents" attrs="{'invisible' : [('action', 'in', ['download'])] }">
                        <group>
                            <field name="owner_id"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" invisible="1"/>
                            <field name="activity_option"/>
                        </group>
                    </group>
                    <group string="Activity" name="next_activity" autofocus="autofocus" attrs="{'invisible': [('activity_option', '=', False)]}">
                        <group>
                            <field name="activity_type_id" options="{'no_create': True, 'no_open': True}" attrs="{'required': [('activity_option', '=', True)]}"/>
                            <field name="activity_summary" placeholder="e.g. Discuss proposal"/>
                        </group>
                        <group>
                            <label for="activity_date_deadline_range"/>
                            <div class="o_row">
                                <field name="activity_date_deadline_range"/>
                                <field name="activity_date_deadline_range_type"/>
                            </div>
                            <field name="activity_user_id"/>
                        </group>
                        <field name="activity_note" placeholder="Log a note..."/>
                    </group>
                    <field name="attachment_ids" invisible="1" readonly="1"/>
                    <footer>
                        <button name="write" type="object" string="Done" class="btn btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- workflow -->

    <record id="workflow_rule_view_tree" model="ir.ui.view">
        <field name="name">action tree</field>
        <field name="model">documents.workflow.rule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="domain_folder_id"/>
                <field name="name"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="workflow_rule_form_view" model="ir.ui.view">
        <field name="name">Rules form</field>
        <field name="model">documents.workflow.rule</field>
        <field name="arch" type="xml">
            <form>

                <sheet>
                    <div class="oe_title">
                      <label for="name" class="oe_edit_only"/>
                      <h1><field name="name" placeholder="E.g. Validate document"/></h1>
                    </div>
                    <group>
                        <notebook>
                            <page string="Conditions">
                                <field name="condition_type" widget="radio" groups="base.group_no_one"/>
                                <field name="domain" string="Domain" nolabel="1" widget="domain" colspan="2" options="{'model':'ir.attachment'}" attrs="{ 'invisible' : [('condition_type', '=', 'criteria')]}"/>
                                <group>
                                    <group>
                                        <field name="note" placeholder="Write a tooltip for the action here"/>
                                        <field name="domain_folder_id" required="1"/>
                                        <field name="criteria_partner_id"  attrs="{ 'invisible' : [('condition_type', '=', 'domain')]}"/>
                                        <field name="criteria_owner_id"  attrs="{ 'invisible' : [('condition_type', '=', 'domain')]}"/>
                                    </group>
                                    <group attrs="{ 'invisible' : [('condition_type', '=', 'domain')]}">
                                        <field name="criteria_tag_ids">
                                            <tree editable="bottom">
                                                <field name="operator"/>
                                                <field name="facet_id" domain="[('folder_id','parent_of', parent.domain_folder_id)]"/>
                                                <field name="tag_id" domain="[('facet_id','=',facet_id)]"/>
                                            </tree>
                                        </field>
                                    </group>
                                </group>
                            </page>
                            <page string="Actions">
                                <group>
                                    <field name="has_business_option" invisible="1"/>
                                    <field name="create_model" attrs="{ 'invisible' : [('has_business_option', '=', False)]}"/>
                                    <field name="partner_id"/>
                                    <field name="user_id"/>
                                </group>
                                <group>
                                    <field name="folder_id" />
                                    <field name="tag_action_ids">
                                        <tree editable="bottom">
                                            <field name="action"/>
                                            <field name="facet_id" domain="[('folder_id','parent_of',[parent.folder_id, parent.domain_folder_id])]" required="1"/>
                                            <field name="tag_id" domain="[('facet_id','=',facet_id)]" options='{"no_open": True}'/>
                                        </tree>
                                    </field>
                                    <field name="remove_activities"/>
                                    <field name="activity_option"/>
                                </group>
                                <group string="Activity" name="next_activity" autofocus="autofocus" attrs="{'invisible': [('activity_option', '=', False)]}">
                                    <group>
                                        <field name="activity_type_id" options="{'no_create': True, 'no_open': True}" attrs="{'required': [('activity_option', '=', True)]}"/>
                                        <field name="activity_summary" placeholder="e.g. Discuss proposal"/>
                                    </group>
                                    <group>
                                        <label for="activity_date_deadline_range"/>
                                        <div class="o_row">
                                            <field name="activity_date_deadline_range"/>
                                            <field name="activity_date_deadline_range_type"/>
                                        </div>
                                        <field name="activity_user_id"/>
                                    </group>
                                    <field name="activity_note" placeholder="Log a note..."/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
