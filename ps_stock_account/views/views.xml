<odoo>
    <data>
        <record id="view_product_price_maintenance_tree" model="ir.ui.view">
            <field name="name">Price Maintenance List</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <tree create="false" editable="bottom">
                    <field name="name" readonly="1" groups="account.group_account_manager"/>
                    <field name="default_code" readonly="1" groups="account.group_account_manager"/>
                    <field name="type" readonly="1" groups="account.group_account_manager"/>
                    <field name="uom_po_id" readonly="1" groups="account.group_account_manager"/>
                    <field name="ps_incoming_price" groups="account.group_account_manager"/>
                </tree>
            </field>
        </record>
        <record id="action_window_account_china_center_product_price_maintenance" model="ir.actions.act_window">
            <field name="name">Product Price Maintenance</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree</field>
            <field name="context" eval="{'search_default_no_set_maintenance':1, 'remove_name': 'all_remove'}"/>
            <field name="view_id" ref="view_product_price_maintenance_tree"/>
        </record>

        <record id="view_price_maintenance_search" model="ir.ui.view">
            <field name="name">Price Maintenance Search</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <search>
                    <filter name="no_set_maintenance" string="Price No Set"
                            domain="['|',('ps_incoming_price','=',False),('ps_incoming_price','=','0')]"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="view_prod_form_invoicing_page_add_incoming_price_field">
            <field name="name">view.prod.form.invoicing.page</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@name='invoicing']" position="inside">
                        <group string="Inventory accounting" name="incoming_accounting">
                            <field name="ps_incoming_price" groups="account.group_account_manager"/>
                            <field name="standard_price" widget='monetary'
                                   options="{'currency_field': 'currency_id', 'field_digits': True}"
                                   groups="account.group_account_manager"/>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>


        <menuitem name="Stock Account China Center"
                  id="ps_stock_account.menu_root"
                  web_icon="ps_stock_account,static/description/icon.png"
                  groups="account.group_account_manager"/>
        <menuitem name="Stock Create Move"
                  id="ps_stock_account.create_move"
                  parent="ps_account_center.menu_1"
                  action="action_ps_stock_picking_create_move"
                  groups="account.group_account_manager"/>
        <menuitem name="Price Maintenance" id="menu_price_maintenance"
                  parent="ps_account_center.menu_4"
                  action="action_window_account_china_center_product_price_maintenance"
                  groups="account.group_account_manager"/>
    </data>
</odoo>