<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="account_china_center_inventory_details_view" model="ir.actions.client">
            <field name="name">Inventory Receive-Issue-Store  Detail Report</field>
            <field name="tag">ps_account_center_report</field>
            <field name="context" eval="{'model': 'inventory.details.report'}"/>
        </record>

        <menuitem name="Reporting"
            id="stock_account_reporting"
            parent="ps_account_center.menu_root" sequence="5"
            groups="account.group_account_manager"/>
            />

        <menuitem id="menu_inventory_details_view"
                  name="Inventory Details"
                  parent="stock_account_reporting"
                  sequence="180"
                  action="account_china_center_inventory_details_view" groups="account.group_account_manager"/>

        <record id="stock_account_china_center_stock_summary_view" model="ir.actions.client">
            <field name="name">Inventory Receive-Issue-Store Summary Report</field>
            <field name="tag">stock_account_china_center_stock_summary_report</field>
            <field name="context" eval="{'model': 'inventory.summary.report'}"/>
        </record>

        <menuitem id="menu_inventory_summary_view"
                  name="Inventory Summary"
                  parent="stock_account_reporting"
                  sequence="181"
                  action="stock_account_china_center_stock_summary_view" groups="account.group_account_manager"/>
    </data>
</odoo>