<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ps_stock_create_account_move_view" model="ir.ui.view">
            <field name="name">Stock Pickings Create Move</field>
            <field name="model">ps.stock.create.account.move</field>
            <field name="arch" type="xml">
                <form string="Post Journal Entries">
                    <p>Are you sure you want to create moves?</p>
                    <footer>
                        <button string="Confirm" name="stock_create_account_move" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="ps_invoice_stock_move_validate_view" model="ir.ui.view">
            <field name="name">Invoice Stock Move Validate</field>
            <field name="model">ps.invoice.stock.move.validate</field>
            <field name="arch" type="xml">
                <form string="Invoice Stock Move Validate">
                    <p>Are you sure you want to validate its?</p>
                    <footer>
                        <button string="Confirm" name="invoic_stock_move_validate" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>