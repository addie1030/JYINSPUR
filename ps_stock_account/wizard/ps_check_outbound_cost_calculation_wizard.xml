<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="check_outbound_cost_calculation_view" model="ir.ui.view">
            <field name="name">Check Outbound Cost Calculation</field>
            <field name="model">ps.check.outbound.cost.calculation</field>
            <field name="arch" type="xml">
                <form string="Check Outbound Cost Calculation">
                    <p>The outbound cost of the current accounting interval has been calculated, is it recalculated?</p>
                    <footer>
                        <button string="Confirm" name="outbound_cost_recalculation" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" name="outbound_cost_recalculation_cancel" type="object"
                                class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_check_outbound_cost_calculation" model="ir.actions.act_window">
            <field name="name">Check Outbound Cost Calculation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ps.check.outbound.cost.calculation</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="check_outbound_cost_calculation_view"/>
            <field name="context">{}</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="ps_stock_account.model_ps_check_outbound_cost_calculation"/>
        </record>

        <!--出库成本计算选择会计区间-->
        <record id="view_account_period_selection" model="ir.ui.view">
            <field name="name">ps.outbound.cost.calculation.form</field>
            <field name="model">ps.outbound.cost.calculation</field>
            <field name="arch" type="xml">
                <form string="Account Period">
                    <group col="2">
                        <group>
                            <field name="account_period" groups="account.group_account_manager"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Confirm" name="confirm_set_button" context="{'account_period':account_period}"
                                type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_outbound_cost_calculation_account_period_selection" model="ir.actions.act_window">
            <field name="name">Account Period Selection</field>
            <field name="res_model">ps.outbound.cost.calculation</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Outbound Cost Calculation"
                  id="ps_stock_account.outbound_cost_calculation"
                  parent="ps_account_center.menu_9"
                  action="action_outbound_cost_calculation_account_period_selection"
                  groups="account.group_account_manager"/>
    </data>
</odoo>