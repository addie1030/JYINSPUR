<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cancel_created_move_view" model="ir.ui.view">
            <field name="name">Cancel Selected Item(s)</field>
            <field name="model">ps.cancel.move</field><!-- 换成取消生成凭证的瞬时model -->
            <field name="arch" type="xml">
                <form string="Post Journal Entries">
                    <p>Are you sure you want to cancel the generation of the selected document?</p>
                    <footer>
                        <button string="Confirm" name="cancel_selected_move" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_cancel_created_move" model="ir.actions.act_window">
            <field name="name">Cancel Move</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ps.cancel.move</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="cancel_created_move_view"/>
            <field name="context">{}</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="ps_stock_account.model_ps_stock_account_china_center_cancel_move"/>
        </record>
    </data>
</odoo>