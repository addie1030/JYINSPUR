<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ps_purchase_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.purchase.in.ps.purchase</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='purchase_setting_container']" position="inside">
                    <div name='ps_change_purchase_order' class="col-xs-12 col-md-6 o_setting_box" title="Allow change purchase order with traceability">
                        <div class="o_setting_left_pane">
                            <field name="module_ps_purchase_change"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_ps_purchase_change"/>
                            <div class="text-muted">
                                Allow to change purchase order with traceable record.
                            </div>
                            <div class="content-group">
                                <div name="change_order_info"/>
                            </div>
                        </div>
                    </div>
                </xpath>
                <field name="po_lock" position="after">
                    <h2>Company</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box" title="Receiving/Returning more than what was initially planned for the product will not be allowed if this is selected.">
                            <div class="o_setting_left_pane">
                                <field name="ps_is_overpass_initial_ordered_process"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="ps_is_overpass_initial_ordered_process"/>
                                <div class="text-muted">
                                    Not allow to receive/return more than initially planned
                                </div>
                                <div class="content-group">
                                    <div name="exceeding_receive_info"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </field>
            </field>
        </record>
    </data>
</odoo>