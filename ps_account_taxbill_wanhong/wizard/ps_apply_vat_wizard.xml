<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ps_account_taxbill_apply_vat_wizard_view" model="ir.ui.view">
            <field name="name">ps.apply.vat.wizard</field>
            <field name="model">ps.apply.vat.wizard</field>
            <field name="arch" type="xml">
                <form string="Apply VAT">
                    <p>Successfully submitted a billing application</p>
                    <footer>
                        <button string="Confirm" name="ps_apply_vat_confirm" type="object" default_focus="1" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="ps_account_taxbill_download_vat_wizard_view" model="ir.ui.view">
            <field name="name">ps.download.vat.wizard</field>
            <field name="model">ps.download.vat.wizard</field>
            <field name="arch" type="xml">
                <form string="download VAT">
                    <p>Successfully download the applied invoice</p>
                    <footer>
                        <button string="Confirm" name="ps_download_vat_confirm" type="object" default_focus="1" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>