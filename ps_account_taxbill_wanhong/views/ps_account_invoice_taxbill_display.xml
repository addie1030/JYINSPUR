<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--tree view-->
    <record id="ps_account_taxbill_invoice_tree" model="ir.ui.view">
        <field name="name">ps.account.invoice.taxbill.tree</field>
        <field name="model">ps.account.invoice.taxbill</field>
        <field name="arch" type="xml">
            <tree string="Tax Receipt" create="false" edit="false" delete="false">
                <field name="invoice_code"/>
                <field name="invoice_number"/>
                <field name="tax_invoice_type"/>
                <field name="partner_id"/>
                <field name="taxbill_date"/>
                <field name="tax_amount"/>
                <field name="amount"/>
                <field name="taxbill_state"/>
                <field name="original_taxbill"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>
    <!--form view-->
    <record id="ps_account_taxbill_invoice_form" model="ir.ui.view">
        <field name="name">ps.account.invoice.taxbill.form</field>
        <field name="model">ps.account.invoice.taxbill</field>
        <field name="arch" type="xml">
            <form string="Tax Receipt" create="false" edit="false" delete="false">
            <header>
                <field name="taxbill_state" widget="statusbar" statusbar_visible="0,1" readonly="1"/>
            </header>
            <sheet>
                <group>
                    <group>
                        <field name="partner_id" readonly="1"/>
                        <field name="original_taxbill" readonly="1"/>
                        <field name="invoice_code" readonly="1"/>
                        <field name="invoice_number" readonly="1"/>
                        <field name="notes" readonly="1"/>
                    </group>
                    <group>
                        <field name="taxbill_date" readonly="1"/>
                        <field name="taxbill_state" readonly="1"/>
                        <field name="tax_invoice_type" readonly="1"/>
                        <field name="tax_amount" readonly="1"/>
                    </group>
                    <group>
                        <field name="invoice_url" readonly="1"/>
                    </group>
                </group>
                <notebook>
                    <page string="Details">
                        <field name="invoice_taxbill_ids" readonly="1" widget="one2many_list">
                             <tree string="Tax Receipt Lines" create="0">
                                <field name="trade_name" readonly="1"/>
                                <field name="specification" readonly="1"/>
                                <field name="uom_name" readonly="1"/>
                                <field name="quantity" readonly="1"/>
                                <field name="price_unit" readonly="1"/>
                                <field name="price_unit_tax" readonly="1"/>
                                <field name="tax_rate" readonly="1" widget="percentage"/>
                                <field name="price_subtotal" readonly="1"/>
                                <field name="price_total" readonly="1"/>
                                <field name="price_tax" readonly="1"/>
                                <field name="code_number" readonly="1"/>
                            </tree>
                        </field>
                        <group class="oe_subtotal_footer oe_right">
                            <field name="tax_amount" widget="monetary"/>
                            <div class="oe_subtotal_footer_separator oe_inline">
                                <label for="amount"/>
                            </div>
                            <field name="amount" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary"/>
                        </group>
                        <div class="oe_clear"/>
                    </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>
    <!--action-->
    <record id="ps_account_taxbill_invoice_action_display_tree" model="ir.actions.act_window">
        <field name="name">Tax Receipt Query</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ps.account.invoice.taxbill</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            No record.
          </p>
        </field>
    </record>
    <!--add menuitem-->
    <menuitem id="menu_ps_account_taxbill_invoice_action_display_tree"
              action="ps_account_taxbill_invoice_action_display_tree"
              parent="ps_account_taxbill.menu_manage"
              sequence="3"/>
</odoo>
