<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ps_account_taxbill_form_inherit" model="ir.ui.view">
        <field name="name">ps.account.taxbill.form.inherit</field>
        <field name="model">ps.account.taxbill</field>
        <field name="inherit_id" ref="ps_account_taxbill.view_ps_account_taxbill_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_confirm']" position="after">
                <button name="invoicing_vat" string="Invoice VAT" type="object" states="checked"
                    class="oe_highlight" groups="ps_account_taxbill.group_vat_manager"/>
                <button name="download_vat" string="Download VAT" type="object" states="opening"
                    class="oe_highlight" groups="ps_account_taxbill.group_vat_manager"/>
            </xpath>
        </field>
    </record>
</odoo>