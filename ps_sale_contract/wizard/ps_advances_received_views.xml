<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="add_advances_received_wizard" model="ir.ui.view">
        <field name="name">add_advances_received.wizard</field>
        <field name="model">ps_advances_received.wizard</field>
        <field name="arch" type="xml">
            <form string="Add advances">
                <group>
                    <field name="customer_id" readonly="True"/>
                    <field name="amount" readonly="True"/>
                    <field name="amount_prepaid"/>
                </group>
                <footer>
                    <button name="create_invoices" type="object" string="create invoice" class="oe_highlight"/>

                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="add_advances_action"
                name="Add Advances"
                res_model="ps_advances_received.wizard"
                view_mode="form"
                target="new"
                context="{'default_customer_id':active_id}"
    />

</odoo>