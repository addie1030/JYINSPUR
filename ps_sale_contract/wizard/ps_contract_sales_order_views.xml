<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="add_sales_order_wizard" model="ir.ui.view">
        <field name="name">add_sales_order.wizard</field>
        <field name="model">ps_contract_sales_order.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Sales Order">
                <group>
                    <field name="customer_id" readonly="True"/>
                    <field name="warehouse_id" required="1"/>
                    <field name="validity_date" required="1"/>
                </group>
                <group>
                    <field name="sale_person_id" invisible="True"/>
                    <field name="sale_team_id" invisible="True"/>
                </group>
                <notebook>
                    <page string="Line">
                        <field name="contract_line">
                            <!--Line-->
                            <tree string="Sales Order Lines"  create="0" editable="bottom">
                                <field name="product_id" invisible="1"/>
                                <field name="show_product_id" readonly="1"/>
                                <field name="description" invisible="1"/>
                                <field name="show_description" readonly="1"/>
                                <field name="qty_remaining" readonly="1"/>
                                <field name="quantity"/>
                                <field name="price" invisible="1"/>
                                <field name="tax_id" invisible="1"/>
                                <field name="uom_id" invisible="1"/>
                                <field name="show_uom_id" readonly="1"/>
                                <field name="wizard_line_id" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="confirm_so" type="object" string="Confirm" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="add_sales_order_action"
                name="Add Sales Order"
                res_model="ps_contract_sales_order.wizard"
                view_mode="form"
                target="new"
                context="{'default_contract_id':active_id}"
    />

</odoo>